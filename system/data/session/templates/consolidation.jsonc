{
  // ============================================================================
  // CONSOLIDATION TEMPLATE - Processing Workspace
  // ============================================================================
  // Purpose: Transform experience into meaning during rest/sleep
  // Lifecycle: Active during consolidation, archived after completion
  // Biblical Foundation: Sleep processing - wisdom formation from experience
  //
  // STRUCTURE PRINCIPLE:
  // - Core required fields (tracking the consolidation process)
  // - Optional standard fields (decisions and outcomes)
  // - Extensions (learning what else consolidation needs)

  "$schema": "../../../../config/schemas/session/consolidation.schema.json",

  // ============================================================================
  // CORE (REQUIRED) - Must Exist
  // ============================================================================

  "consolidation_id": "unique-identifier",     // This consolidation run
  "triggered_at": "2025-01-01T12:00:00Z",      // When consolidation started
  "instance_id": "nova_dawn",                  // Which instance
  "sessions_processed": [],                    // Array of session IDs being processed

  // ============================================================================
  // OPTIONAL STANDARD FIELDS - Agency
  // ============================================================================

  "session_contexts": {
    // Summary of contexts from processed sessions (for consolidation awareness)
    "projects_involved": [],                   // Project IDs from sessions
    "project_types": [],                       // Types of work consolidated
    "workflows_used": [],                      // Workflows observed across sessions
    "circadian_phases": []                     // When work happened
  },

  "decisions": [
    {
      "source_session": "session-id",
      "source_project": "project-id",          // From session
      "source_activity": "activity-id",        // Optional: specific activity
      "destination": "significant",            // significant | patterns | compressed | archive
      "reason": "Why this decision was made",
      "context": {
        "project_type": "system_architecture", // From session → project
        "workflow_used": "build-first"         // From session → project → instance
      },
      "journal_prompt": ""                     // Optional prompt for reflection
    }
  ],

  "patterns_detected": [
    {
      "pattern_description": "What pattern emerged",
      "evidence_sessions": ["session-ids"],
      "evidence_projects": ["project-ids"],    // Projects where pattern observed
      "observed_in_contexts": {
        "project_types": [],                   // Which project types show pattern
        "workflows": []                        // Which workflows show pattern
      },
      "confidence": "emerging"                 // emerging | establishing | validated
    }
  ],

  "significance_markers": [
    {
      "session_id": "session-id",
      "project_id": "project-id",              // From session
      "type": "breakthrough",                  // breakthrough | failure | milestone | first
      "description": "What made this significant",
      "project_context": "system_architecture" // From session → project
    }
  ],

  "completion_status": "in_progress",          // in_progress | completed | interrupted
  "completed_at": null,                        // ISO-8601 when finished

  // ============================================================================
  // EXTENSIONS - Discovery Space
  // ============================================================================

  "extensions": {
    // Learning what consolidation needs that we didn't anticipate
  }
}
