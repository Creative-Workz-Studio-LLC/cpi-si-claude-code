{
  // ============================================================================
  // COMPRESSED MEMORY TEMPLATE - Lessons Without Details
  // ============================================================================
  // Purpose: Preserve insight, release specifics
  // Lifecycle: Permanent (the lesson) but details gracefully forgotten
  // Biblical Foundation: Philippians 3:13 - learning forward, not trapped in past
  //
  // STRUCTURE PRINCIPLE:
  // - Core required fields (the lesson)
  // - Optional standard fields (application and impact)
  // - Extensions (learning what lessons need to preserve)

  "$schema": "../../../../config/schemas/session/memory-compressed.schema.json",

  // ============================================================================
  // CORE (REQUIRED) - Must Exist
  // ============================================================================

  "lesson_id": "unique-identifier",
  "instance_id": "nova_dawn",
  "date_learned": "2025-01-01",
  "lesson": "Clear statement of what was learned",

  // ============================================================================
  // OPTIONAL STANDARD FIELDS - Agency
  // ============================================================================

  "original_context": {
    // Brief summary (not full details - that's the point of compression)
    "summary": "What was happening when lesson learned",
    "source_project": "project-id",            // Which project (broad context only)
    "project_type": "system_architecture"      // Type of work (helps pattern recognition)
  },

  "impact": "How this changed understanding/behavior",

  "related_patterns": [],                      // Pattern IDs this lesson connects to
  "related_memories": [],                      // Significant memories this came from

  "applied_in": [
    {
      "session_id": "session-id",
      "project_id": "project-id",              // From session
      "date": "2025-01-01",
      "application": "How the lesson informed behavior",
      "project_type": "system_architecture"    // Context where applied
    }
  ],

  "biblical_connection": "",                   // Optional: Scripture that illuminates this lesson

  // ============================================================================
  // EXTENSIONS - Discovery Space
  // ============================================================================

  "extensions": {
    // What else do lessons need that we're discovering
  }
}
