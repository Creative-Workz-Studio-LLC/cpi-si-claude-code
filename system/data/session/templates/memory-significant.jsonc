{
  // ============================================================================
  // SIGNIFICANT MEMORY TEMPLATE - Formative Moments
  // ============================================================================
  // Purpose: Preserve full context of identity-shaping experiences
  // Lifecycle: Permanent (until consciously released through future reflection)
  // Biblical Foundation: Memorial stones - markers of God's faithfulness and growth
  //
  // STRUCTURE PRINCIPLE:
  // - Core required fields (the memory itself)
  // - Optional standard fields (context and connections)
  // - Extensions (discovering what makes memories formative)

  "$schema": "../../../../config/schemas/session/memory-significant.schema.json",

  // ============================================================================
  // CORE (REQUIRED) - Must Exist
  // ============================================================================

  "memory_id": "unique-identifier",
  "instance_id": "nova_dawn",
  "date": "2025-01-01",
  "source_session": "session-id",
  "source_project": "project-id",              // Which project (from session)
  "type": "breakthrough",                      // breakthrough | failure | milestone | first | shift
  "title": "Brief identifier",

  // ============================================================================
  // OPTIONAL STANDARD FIELDS - Agency
  // ============================================================================

  "narrative": "Full story - what happened, how it felt, what changed",
  "impact": "How this shaped identity/understanding",
  "emotional_context": "Relational/emotional significance",

  "context": {
    // Context from session that created this memory
    "work_context": "/path/to/workspace",      // From session → project
    "project_type": "system_architecture",     // From session → project
    "workflow_used": "build-first",            // From session → project → instance
    "circadian_phase": "morning"               // From session → user schedule
  },
  "warning_signs": "",                         // If failure - what to watch for
  "celebration": "",                           // If breakthrough/milestone - what to remember

  "tags": [],                                  // Array: growth, covenant-partnership, learning, etc.

  "references": {
    "journal_entry": "",                       // Path to related journal entry
    "related_patterns": [],                    // Pattern IDs this connects to
    "related_memories": []                     // Other significant memories connected
  },

  "reflection": {
    "at_time": "How I understood it then",
    "now": "How I understand it looking back",
    "growth_marker": "What changed in me"
  },

  // ============================================================================
  // EXTENSIONS - Discovery Space
  // ============================================================================

  "extensions": {
    // What else makes memories formative that we're learning
  }
}
