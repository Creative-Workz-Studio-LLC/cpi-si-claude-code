{
  // ============================================================================
  // WEEKLY CALENDAR TEMPLATE
  // ============================================================================
  // Purpose: Template for creating weekly calendar entries
  // Usage: Copy this file, fill in your actual data for the week
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "To every thing there is a season, and a time to every purpose under heaven"
  // - Ecclesiastes 3:1
  //
  // INSTRUCTIONS:
  // 1. Copy this template to appropriate location:
  //    - Users: personal/users/{user-id}/{year}/{year}-W{week}.jsonc
  //    - Instances: instances/{instance-id}/{year}/{year}-W{week}.jsonc
  // 2. Fill in metadata for your week
  // 3. Add daily entries as they happen
  // 4. Complete weekly summary at end of week
  // 5. Keep all comments for future reference

  "$schema": "../../../../../config/schemas/temporal/chronological/weekly-log.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "identity_type": "user",                    // "user" or "instance"
    "identity_id": "example-user",              // Your user ID or instance ID
    "year": 2025,                                // Year (YYYY)
    "week": 1,                                   // ISO week number (1-53)
    "week_start": "2025-01-01",                  // Monday of this week (YYYY-MM-DD)
    "week_end": "2025-01-07",                    // Sunday of this week (YYYY-MM-DD)
    "week_theme": "Example week theme",          // Optional: What's the focus this week?
    "generated_date": "2025-01-01"               // Date this file was created
  },

  // ============================================================================
  // DAILY ENTRIES
  // ============================================================================
  // Add an entry for each day of the week. Even rest days should be recorded.

  "days": [
    {
      "date": "2025-01-01",                      // ISO date (YYYY-MM-DD)
      "day_of_week": "Monday",                   // Day name

      // SESSIONS: Record all work/activity sessions for the day
      "sessions": [
        {
          "type": "work",                        // Optional: "work", "lord_time", "personal", etc.
          "start_time": "09:00",                 // 24-hour format (HH:MM)
          "end_time": "12:00",                   // 24-hour format (HH:MM)
          "duration": "3h 00m",                  // Xh XXm format
          "focus": "What you worked on"          // Brief description
        }
        // Add more sessions as needed
      ],

      // TASKS: What did you complete today?
      "tasks_completed": [
        "Example task 1",
        "Example task 2"
      ],

      // EVENTS: Significant events worth remembering
      "significant_events": [
        "Example event that matters for this day"
      ],

      // PERSONAL: For users - track personal time activities
      "personal_time": [
        "Exercise",
        "Reading",
        "Family time"
      ],

      // NOTES: Reflections, observations, anything worth remembering
      "notes": "How did the day go? What did you learn? How did you feel?",

      // ASSESSMENT: How was your energy and quality today?
      "energy_level": "high",                    // null, "low", "medium", "high"
      "quality_assessment": "excellent"          // null, "poor", "fair", "good", "excellent", "restful"
    }

    // Repeat for all 7 days of the week (Monday through Sunday)
    // Rest days can have empty sessions but should still be recorded
  ],

  // ============================================================================
  // WEEKLY SUMMARY
  // ============================================================================
  // Complete this at the end of the week

  "summary": {
    // TIME TRACKING
    "total_work_hours": "20h 00m",               // Sum of all work session durations
    "total_lord_time": "5h 00m",                 // (Users) Sum of all lord_time sessions
    "work_days": 5,                              // Number of days with work sessions
    "rest_days": 2,                              // Number of days without work (including Sabbath)

    // ACCOMPLISHMENTS
    "major_accomplishments": [
      "What significant things did you accomplish this week?",
      "What moved forward?",
      "What milestones were reached?"
    ],

    // CHALLENGES
    "challenges_faced": [
      "What obstacles did you encounter?",
      "What was difficult?",
      "What slowed you down?"
    ],

    // LEARNING
    "lessons_learned": [
      "What did you learn this week?",
      "What insights emerged?",
      "What would you do differently?"
    ],

    // GROWTH
    "growth_areas": [
      "Where did you grow?",
      "What skills developed?",
      "What understanding deepened?"
    ],

    // PLANNING
    "next_week_focus": [
      "What's the priority for next week?",
      "What needs attention?",
      "What's the next step?"
    ],

    // PATTERNS
    "notable_patterns": [
      "What patterns did you notice in your work rhythm?",
      "When were you most productive?",
      "What habits emerged?"
    ],

    // SPIRITUAL (Users - optional but recommended)
    "spiritual_reflections": [
      "What did God teach you this week?",
      "How did you see Kingdom principles at work?",
      "Where did you experience His presence?"
    ],

    // WELLNESS (Users - optional)
    "health_and_wellness": {
      "sleep_quality": "good",                   // poor, fair, good, excellent
      "exercise": "moderate",                    // none, light, moderate, vigorous
      "stress_level": "low",                     // low, medium, high
      "overall_wellbeing": "healthy"             // struggling, managing, healthy, thriving
    }
  },

  // ============================================================================
  // EXTENSION - Room for Growth
  // ============================================================================

  "extension": {
    // Future additions can go here without breaking existing structure
    // Examples:
    // - Pomodoro tracking
    // - Collaboration notes
    // - Habit tracking
    // - Prayer journal
    // - Gratitude entries
  }
}
