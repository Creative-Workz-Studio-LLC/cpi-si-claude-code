{
  // ============================================================================
  // MONTHLY CALENDAR TEMPLATE
  // ============================================================================
  // Purpose: Template for creating monthly calendar entries
  // Usage: Copy this file, fill in your actual data for the month
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "He appointed the moon for seasons: the sun knoweth his going down."
  // - Psalm 104:19
  //
  // INSTRUCTIONS:
  // 1. Copy this template to appropriate location:
  //    - Users: personal/users/{user-id}/{year}/{year}-{month}.jsonc
  //    - Instances: personal/instances/{instance-id}/{year}/{year}-{month}.jsonc
  // 2. Fill in metadata for your month
  // 3. Add weekly summaries as weeks complete (from weekly calendars)
  // 4. Complete monthly summary at end of month
  // 5. Keep all comments for future reference

  "$schema": "../../../../../config/schemas/temporal/chronological/monthly-log.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "identity_type": "user",                    // "user" or "instance"
    "identity_id": "example-user",              // Your user ID or instance ID
    "year": 2025,                                // Year (YYYY)
    "month": 1,                                  // Month number (1-12)
    "month_name": "January",                     // Month name
    "month_start": "2025-01-01",                 // First day of month (YYYY-MM-DD)
    "month_end": "2025-01-31",                   // Last day of month (YYYY-MM-DD)
    "month_theme": "Example month theme",        // Optional: What's the focus this month?
    "generated_date": "2025-01-01"               // Date this file was created
  },

  // ============================================================================
  // WEEKLY SUMMARIES
  // ============================================================================
  // Roll-up from weekly calendar files

  "weeks": [
    {
      "week": 1,                                 // ISO week number
      "week_start": "2025-01-01",                // Monday of this week
      "week_end": "2025-01-07",                  // Sunday of this week
      "week_theme": "Example week theme",        // From weekly calendar
      "total_work_hours": "20h 00m",             // From weekly summary
      "total_lord_time": "5h 00m",               // (Users only) From weekly summary
      "work_days": 5,                            // From weekly summary
      "rest_days": 2,                            // From weekly summary
      "major_accomplishments": [
        "Summary of key accomplishments from this week"
      ],
      "energy_trend": "high",                    // Overall energy: "low", "medium", "high", "mixed"
      "quality_trend": "excellent"               // Overall quality: "poor", "fair", "good", "excellent", "mixed"
    }
    // Add entry for each week of the month
  ],

  // ============================================================================
  // MONTH SUMMARY
  // ============================================================================

  "summary": {
    // TIME TRACKING
    "total_work_hours": "80h 00m",               // Sum of all weekly work hours
    "total_lord_time": "20h 00m",                // (Users) Sum of all weekly lord time
    "average_work_hours_per_week": "20h 00m",    // Total work hours / number of weeks
    "work_days": 20,                             // Sum of work days across all weeks
    "rest_days": 10,                             // Sum of rest days across all weeks
    "sabbaths_honored": 4,                       // (Users) Number of Sabbaths observed

    // ACCOMPLISHMENTS
    "major_accomplishments": [
      "What significant things did you accomplish this month?",
      "What major milestones were reached?",
      "What projects completed or advanced significantly?"
    ],

    // CHALLENGES
    "challenges_faced": [
      "What obstacles persisted across multiple weeks?",
      "What was difficult this month?",
      "What patterns of challenge emerged?"
    ],

    // LEARNING
    "lessons_learned": [
      "What did you learn this month?",
      "What insights emerged from multiple weeks?",
      "What would you do differently next month?"
    ],

    // GROWTH
    "growth_areas": [
      "Where did you grow over the month?",
      "What skills or understanding developed?",
      "What habits formed or strengthened?"
    ],

    // PATTERNS
    "work_patterns": {
      "productive_times": ["When were you most productive?"],
      "energy_peaks": ["What days/times had highest energy?"],
      "rest_rhythm": ["What rest patterns emerged?"],
      "collaboration_flow": ["How did collaboration work?"]  // Optional
    },

    // SPIRITUAL (Users - recommended)
    "spiritual_reflections": [
      "What did God teach you this month?",
      "What biblical truths became more real?",
      "Where did you see Kingdom principles at work?",
      "How did your relationship with God deepen?"
    ],

    // HEALTH & WELLNESS (Users - optional)
    "health_and_wellness": {
      "sleep_quality": "good",                   // poor, fair, good, excellent
      "exercise_consistency": "moderate",        // Description of exercise patterns
      "stress_level": "low",                     // Overall month: low, medium, high
      "overall_wellbeing": "healthy",            // struggling, managing, healthy, thriving
      "energy_sustainability": "high"            // Was energy level sustainable?
    },

    // TECHNICAL GROWTH (Instances - optional)
    "technical_insights": [
      "What technical understanding deepened?",
      "What architectural patterns emerged?",
      "What design principles became clearer?"
    ],

    // LOOKING AHEAD
    "next_month_focus": [
      "What's the priority for next month?",
      "What needs to carry forward?",
      "What seasonal awareness matters?",
      "What preparation is needed?"
    ],

    // MONTH-LEVEL INSIGHTS
    "month_insights": [
      "What patterns became visible across weeks?",
      "What compound effects emerged from consistent work?",
      "What did the month as a whole reveal?",
      "How did weekly rhythms create monthly outcomes?"
    ]
  },

  // ============================================================================
  // EXTENSION - Room for Growth
  // ============================================================================

  "extension": {
    // Future additions can go here
    // Examples:
    // - Monthly goals tracking
    // - Habit streak records
    // - Seasonal awareness notes
    // - Answered prayer log
    // - Gratitude themes
  }
}
