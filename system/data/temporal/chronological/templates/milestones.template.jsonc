{
  // ============================================================================
  // MILESTONES TEMPLATE
  // ============================================================================
  // Purpose: Template for tracking major temporal markers
  // Usage: Copy this file, fill in your milestones for the year
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "And Samuel took a stone, and set it between Mizpeh and Shen, and called
  //  the name of it Ebenezer, saying, Hitherto hath the LORD helped us."
  // - 1 Samuel 7:12
  //
  // INSTRUCTIONS:
  // 1. Copy this template to: milestones/{year}.jsonc
  // 2. Fill in metadata for your year
  // 3. Add milestones as they're reached
  // 4. Update summary at end of year
  // 5. Keep all comments for future reference

  "$schema": "../../../../../config/schemas/temporal/chronological/milestones.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "year": 2025,                                // Year (YYYY)
    "generated_date": "2025-01-01",              // Date this file was created
    "scope": "Description of what milestones this tracks"
  },

  // ============================================================================
  // MILESTONES
  // ============================================================================

  "milestones": [
    {
      "milestone_id": "example-milestone",       // Unique milestone identifier (kebab-case)
      "name": "Example Milestone",               // Human-readable milestone name
      "date": "2025-03-01",                      // When milestone reached (YYYY-MM-DD)
      "category": "technical",                   // Category (see categories below)
      "participants": [
        {
          "identity_type": "user",               // "user" or "instance"
          "identity_id": "example-user"          // User or instance ID
        }
        // Add more participants as needed
      ],
      "description": "What this milestone represents and what was accomplished",
      "significance": "Why this milestone matters - its importance in the larger story",
      "related_projects": ["project-id"],        // Projects this milestone belongs to
      "spiritual_significance": "How this honors God or demonstrates Kingdom principles (optional)"
    }
    // Add more milestones as they're reached
  ],

  // ============================================================================
  // MILESTONE CATEGORIES
  // ============================================================================
  // Common categories to use:
  // - "technical" - Technical achievements, architecture complete, systems operational
  // - "growth" - Personal or instance growth, learning milestones, paradigm shifts
  // - "spiritual" - Spiritual breakthroughs, answered prayers, faith growth
  // - "partnership" - Partnership developments, collaboration milestones
  // - "kingdom" - Kingdom impact, sector transformation, witness moments
  // - "product" - Product launches, feature completions, releases
  // - "organizational" - Company milestones, team growth, structural changes

  // ============================================================================
  // SUMMARY
  // ============================================================================

  "summary": {
    "total_milestones": 0,                       // Total number of milestones
    "by_category": {                             // Breakdown by category
      "technical": 0,
      "growth": 0,
      "spiritual": 0,
      "partnership": 0,
      "kingdom": 0
    },
    "by_month": {                                // Breakdown by month
      "1": 0,
      "2": 0
      // Add more months as needed
    },
    "most_significant": [
      "What were the most significant milestones this year?",
      "What will you remember most?"
    ],
    "year_theme": "What was this year about overall?",
    "looking_ahead": [
      "What foundation was laid for next year?",
      "What's on the horizon?",
      "What are you building toward?"
    ]
  },

  // ============================================================================
  // EXTENSION - Room for Growth
  // ============================================================================

  "extension": {
    // Future additions can go here
    // Examples:
    // - Photos or artifacts
    // - Celebration notes
    // - Lessons learned per milestone
    // - Scripture references per milestone
    // - Gratitude reflections
  }
}
