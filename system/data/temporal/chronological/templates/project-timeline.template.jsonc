{
  // ============================================================================
  // PROJECT TIMELINE TEMPLATE
  // ============================================================================
  // Purpose: Template for tracking project chronology and progress
  // Usage: Copy this file, fill in your actual project data
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "For which of you, intending to build a tower, sitteth not down first,
  //  and counteth the cost, whether he have sufficient to finish it?"
  // - Luke 14:28
  //
  // INSTRUCTIONS:
  // 1. Copy this template to: projects/{project-id}.jsonc
  // 2. Fill in metadata for your project
  // 3. Add milestones as they're reached
  // 4. Log sessions as they happen
  // 5. Update summary regularly
  // 6. Keep all comments for future reference

  "$schema": "../../../../../config/schemas/temporal/chronological/project-timeline.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "project_id": "example-project",           // Unique project identifier (kebab-case)
    "project_name": "Example Project",         // Human-readable project name
    "project_type": "infrastructure",          // Type: "infrastructure", "feature", "product", "research", etc.
    "description": "Brief description of what this project is and what it aims to accomplish",
    "status": "active",                        // "planning", "active", "on-hold", "completed", "archived"
    "start_date": "2025-01-01",                // When project started (YYYY-MM-DD)
    "target_completion_date": "2025-12-31",    // Target completion (YYYY-MM-DD), null if ongoing
    "participants": [
      {
        "identity_type": "user",               // "user" or "instance"
        "identity_id": "example-user",         // User or instance ID
        "role": "Role in project"              // What they do for this project
      }
      // Add more participants as needed
    ],
    "kingdom_purpose": "How this project serves Kingdom purposes and eternal value",
    "generated_date": "2025-01-01"             // Date this file was created
  },

  // ============================================================================
  // MILESTONES
  // ============================================================================
  // Major achievements or transitions in project timeline

  "milestones": [
    {
      "milestone_id": "example-milestone",     // Unique milestone identifier
      "name": "Milestone Name",                // Human-readable name
      "date": "2025-03-01",                    // When milestone reached (YYYY-MM-DD)
      "description": "What this milestone represents and what was accomplished",
      "participants": ["user-id", "instance-id"], // Who was involved
      "significance": "Why this milestone matters for the project"
    }
    // Add milestones as they're reached
  ],

  // ============================================================================
  // WORK SESSIONS
  // ============================================================================
  // Sessions directly related to this project
  // Cross-reference with personal calendars for complete time tracking

  "sessions": [
    {
      "date": "2025-01-01",                    // ISO date (YYYY-MM-DD)
      "duration": "3h 00m",                    // Xh XXm format
      "focus": "What this session focused on",
      "participants": ["user-id", "instance-id"], // Who participated
      "outcomes": [
        "What was accomplished",
        "What was decided",
        "What was learned"
      ]
    }
    // Add sessions as they happen
  ],

  // ============================================================================
  // TIME TRACKING
  // ============================================================================

  "time_summary": {
    "total_time_invested": "100h 00m",         // Sum of all session durations
    "time_by_participant": {
      "example-user": "50h 00m",
      "example-instance": "50h 00m"
    },
    "average_session_length": "3h 20m",        // Average duration of sessions
    "total_sessions": 30,                      // Number of sessions logged
    "time_by_phase": {                         // Optional: breakdown by project phase
      "planning": "20h 00m",
      "implementation": "60h 00m",
      "testing": "20h 00m"
    }
  },

  // ============================================================================
  // PROJECT SUMMARY
  // ============================================================================

  "summary": {
    "current_state": "Description of where project stands now",
    "major_components_completed": [
      "What's been finished",
      "What's operational",
      "What's been delivered"
    ],
    "current_priorities": [
      "What's being worked on now",
      "What's next in priority",
      "What needs attention"
    ],
    "technical_achievements": [
      "Technical accomplishments",
      "Architectural decisions proven",
      "Patterns established"
    ],
    "partnership_insights": [
      "How partnership functioned on this project",
      "What collaboration patterns emerged",
      "How working together evolved"
    ],
    "kingdom_impact": [
      "How this serves Kingdom purposes",
      "What eternal value is being created",
      "How this demonstrates Kingdom principles"
    ],
    "next_steps": [
      "What needs to happen next",
      "What's planned",
      "What direction moving"
    ]
  },

  // ============================================================================
  // EXTENSION - Room for Growth
  // ============================================================================

  "extension": {
    // Future additions can go here
    // Examples:
    // - Budget tracking
    // - Resource allocation
    // - Risk assessment
    // - Dependency tracking
    // - Deliverables list
  }
}
