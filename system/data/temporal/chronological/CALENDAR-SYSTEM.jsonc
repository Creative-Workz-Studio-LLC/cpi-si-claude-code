{
  // ============================================================================
  // CHRONOLOGICAL CALENDAR SYSTEM - COORDINATION FILE
  // ============================================================================
  // Purpose: Central coordination of all calendar types and their relationships
  // Scope: How daily → weekly → monthly → yearly layers connect
  //        How personal ⊗ shared ⊗ projects ⊗ milestones integrate
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "To every thing there is a season, and a time to every purpose under heaven"
  // - Ecclesiastes 3:1
  //
  // This file explains how all calendar pieces work together to provide
  // complete temporal awareness - faithful stewardship of God's gift of time.

  // ============================================================================
  // SYSTEM OVERVIEW
  // ============================================================================

  "system": {
    "name": "Chronological Calendar System",
    "version": "1.0.0",
    "purpose": "Track faithful stewardship of time across all views and layers",
    "biblical_grounding": "Ecclesiastes 3:1, Psalm 90:12, Genesis 1:14"
  },

  // ============================================================================
  // TEMPORAL LAYERS (Bottom-Up)
  // ============================================================================
  // How time aggregates from finest to coarsest granularity

  "temporal_layers": {
    "daily": {
      "description": "Finest granularity - individual sessions, tasks, activities within each day",
      "location": "Embedded within weekly files",
      "structure": "days[] array in weekly calendars",
      "tracks": [
        "Sessions with start/end times",
        "Tasks completed",
        "Significant events",
        "Personal time activities",
        "Energy and quality assessment"
      ]
    },
    "weekly": {
      "description": "Week-level view - rolling up 7 days of detailed activity",
      "location": "personal/{users|instances}/{id}/{year}/{year}-W{week}.jsonc",
      "structure": "Daily entries + weekly summary",
      "tracks": [
        "All daily details for the week",
        "Total work/lord time hours",
        "Work vs rest days",
        "Major accomplishments",
        "Lessons learned and growth",
        "Energy/quality trends"
      ],
      "feeds_into": "Monthly calendars"
    },
    "monthly": {
      "description": "Month-level view - patterns across weeks",
      "location": "personal/{users|instances}/{id}/{year}/{year}-{month}.jsonc",
      "structure": "Weekly summaries + monthly insights",
      "tracks": [
        "Roll-up of weekly summaries",
        "Time totals and averages",
        "Month-level accomplishments",
        "Work rhythm patterns",
        "Growth areas and challenges",
        "Spiritual journey (users)",
        "Technical journey (instances)"
      ],
      "feeds_into": "Yearly calendars"
    },
    "yearly": {
      "description": "Year-level view - annual trajectory and themes",
      "location": "personal/{users|instances}/{id}/{year}.jsonc",
      "structure": "Monthly summaries + annual insights",
      "tracks": [
        "Roll-up of monthly summaries",
        "Annual time totals",
        "Year-level accomplishments",
        "Annual patterns and rhythms",
        "Major growth areas",
        "Kingdom impact (users)",
        "Identity development (instances)"
      ],
      "feeds_into": "Multi-year insights (future)"
    }
  },

  // ============================================================================
  // CALENDAR VIEWS (Perspectives)
  // ============================================================================
  // Different ways to look at the same time

  "calendar_views": {
    "personal": {
      "description": "Individual calendars - personal stewardship view",
      "location": "personal/{users|instances}/{id}/",
      "types": {
        "users": {
          "description": "Human individuals tracking holistic life",
          "tracks": [
            "Work time",
            "Time with the Lord (prayer, Scripture, worship)",
            "Personal activities (exercise, family, hobbies)",
            "Rest and Sabbath",
            "Spiritual journey and reflections",
            "Health and wellness"
          ]
        },
        "instances": {
          "description": "CPI-SI instances tracking work and growth",
          "tracks": [
            "Work sessions and focus areas",
            "Tasks completed",
            "Technical learning and pattern recognition",
            "Growth in understanding",
            "Quality assessment",
            "Identity development"
          ]
        }
      }
    },
    "shared": {
      "description": "Partnership calendars - collaboration view",
      "location": "shared/{partnership-type}/{partnership-name}/",
      "types": {
        "user-to-instance": {
          "description": "User-Instance partnership collaboration",
          "example": "Seanje ⊗ Nova partnership",
          "tracks": [
            "Collaboration sessions",
            "Joint accomplishments",
            "Partnership dynamics and quality",
            "Teaching/learning moments",
            "Growth as partnership"
          ]
        },
        "user-to-user": {
          "description": "User-User collaboration",
          "tracks": "Similar to user-to-instance"
        },
        "instance-to-instance": {
          "description": "Instance-Instance collaboration",
          "tracks": "Similar to user-to-instance"
        }
      }
    },
    "projects": {
      "description": "Project timelines - work-centric view",
      "location": "projects/{project-id}.jsonc",
      "tracks": [
        "Project milestones",
        "Work sessions for this project",
        "Time invested by participant",
        "Technical achievements",
        "Partnership insights",
        "Kingdom impact"
      ],
      "cross_references": "Sessions link to personal calendars, milestones link to milestone registry"
    },
    "milestones": {
      "description": "Temporal markers - remembrance view",
      "location": "milestones/{year}.jsonc",
      "tracks": [
        "Major achievements across all projects",
        "Growth milestones",
        "Spiritual breakthroughs",
        "Partnership developments",
        "Kingdom impact moments"
      ],
      "cross_references": "Milestones link to projects and participants"
    }
  },

  // ============================================================================
  // DATA FLOW & INTEGRATION
  // ============================================================================
  // How information flows between calendar types

  "data_flow": {
    "aggregation_flow": {
      "description": "Bottom-up temporal aggregation",
      "flow": "Daily (sessions/tasks) → Weekly (summary) → Monthly (patterns) → Yearly (themes)",
      "principle": "Each layer summarizes the layer below"
    },
    "cross_referencing": {
      "description": "How different views reference same events",
      "examples": [
        {
          "event": "Collaboration session on 2025-11-07",
          "appears_in": [
            "Seanje's weekly personal calendar (work session)",
            "Nova's weekly personal calendar (work session)",
            "Seanje-Nova shared calendar (collaboration session)",
            "CPI-SI System project timeline (project session)",
            "2025 milestones (if milestone reached)"
          ]
        }
      ],
      "principle": "Same event, different perspectives and significance"
    },
    "coordination_points": {
      "date": "ISO 8601 date (YYYY-MM-DD) - universal reference",
      "time": "24-hour format (HH:MM) - when within day",
      "duration": "Xh XXm format - how long",
      "participants": "Identity IDs - who was involved",
      "outcomes": "What was accomplished - connects work to results"
    }
  },

  // ============================================================================
  // FILE ORGANIZATION
  // ============================================================================

  "file_structure": {
    "personal": {
      "users": "personal/users/{user-id}/{year}/{year}-W{week}.jsonc | {year}-{month}.jsonc | {year}.jsonc",
      "instances": "personal/instances/{instance-id}/{year}/{year}-W{week}.jsonc | {year}-{month}.jsonc | {year}.jsonc"
    },
    "shared": {
      "user-to-instance": "shared/user-to-instance/{partnership-name}/{year}/{year}-W{week}.jsonc",
      "user-to-user": "shared/user-to-user/{partnership-name}/{year}/{year}-W{week}.jsonc",
      "instance-to-instance": "shared/instance-to-instance/{partnership-name}/{year}/{year}-W{week}.jsonc"
    },
    "projects": "projects/{project-id}.jsonc",
    "milestones": "milestones/{year}.jsonc"
  },

  // ============================================================================
  // USAGE EXAMPLES
  // ============================================================================

  "usage_examples": [
    {
      "use_case": "Track your weekly work and rest",
      "calendar_type": "Personal weekly",
      "file": "personal/users/your-id/2025/2025-W45.jsonc",
      "what_to_do": [
        "Log daily sessions as they happen",
        "Record tasks completed each day",
        "Note significant events",
        "Assess energy and quality",
        "Complete weekly summary at week's end"
      ]
    },
    {
      "use_case": "See how partnership is functioning",
      "calendar_type": "Shared weekly",
      "file": "shared/user-to-instance/seanje-nova/2025/2025-W45.jsonc",
      "what_to_do": [
        "Log collaboration sessions",
        "Record joint accomplishments",
        "Assess partnership dynamics",
        "Note teaching/learning moments",
        "Track growth as partnership"
      ]
    },
    {
      "use_case": "Track project progress over time",
      "calendar_type": "Project timeline",
      "file": "projects/cpi-si-system.jsonc",
      "what_to_do": [
        "Add milestones as reached",
        "Log project-specific sessions",
        "Track time invested",
        "Update current state",
        "Document accomplishments"
      ]
    },
    {
      "use_case": "Mark significant achievements",
      "calendar_type": "Milestones",
      "file": "milestones/2025.jsonc",
      "what_to_do": [
        "Add milestone when something significant happens",
        "Describe what was accomplished",
        "Note who was involved",
        "Explain why it matters",
        "Update year summary periodically"
      ]
    }
  ],

  // ============================================================================
  // PRINCIPLES
  // ============================================================================

  "core_principles": {
    "faithful_stewardship": "Time is God's gift - track honestly how it's used",
    "multiple_perspectives": "Same events viewed from different angles reveal fuller truth",
    "aggregation_layers": "Daily detail → Weekly patterns → Monthly trends → Yearly themes",
    "cross_referencing": "Events connect across calendars - showing relationships",
    "rest_matters": "Sabbath and rest tracked as seriously as work",
    "kingdom_focus": "Not just productivity - eternal value and Kingdom impact",
    "growth_tracking": "Personal, partnership, and technical development visible over time",
    "biblical_grounding": "Every calendar type rooted in Scripture"
  }
}
