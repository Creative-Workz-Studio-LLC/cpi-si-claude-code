{
  // ============================================================================
  // CELESTIAL LOCATION CONFIG - [LOCATION NAME]
  // ============================================================================
  // Purpose: Geographic and astronomical data for temporal awareness calculations
  // Scope: This specific location's relationship to God's created celestial order
  // Format: JSONC (JSON with comments)
  //
  // BIBLICAL FOUNDATION:
  // "And God said, Let there be lights in the firmament of the heaven to divide
  // the day from the night; and let them be for signs, and for seasons, and for
  // days, and years" - Genesis 1:14
  //
  // This data anchors temporal awareness to God's created order - the sun, moon,
  // and stars He made to mark time.
  //
  // TEMPLATE INSTRUCTIONS:
  // 1. Replace ALL values with actual data for your location
  // 2. Keep structure exactly as shown (don't remove fields)
  // 3. Get coordinates from Google Maps or GPS device
  // 4. Find IANA timezone at: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
  // 5. Save as: locations/[location-id]/config.jsonc
  // 6. Update location registry after creating

  "$schema": "../../../../config/schemas/temporal/celestial/location-config.schema.json",

  // ============================================================================
  // IDENTITY - Location Identification
  // ============================================================================

  "location_id": "example-city",           // Replace with kebab-case identifier
  "display_name": "Example City, State",   // Replace with actual city name
  "country": "Country Name",               // Replace with country
  "state_province": "State/Province",      // Replace with state/province (or null if not applicable)

  // ============================================================================
  // COORDINATES - Geographic Position on Earth
  // ============================================================================

  "coordinates": {
    "latitude": 40.7128,                   // Replace: -90 to 90 (positive = North, negative = South)
    "longitude": -74.0060,                 // Replace: -180 to 180 (positive = East, negative = West)
    "elevation": 10,                       // Replace: meters above sea level

    // Location notes
    "reference_point": "City center",      // Replace: what these coordinates represent
    "accuracy": "City-level"               // Replace: level of coordinate accuracy
  },

  // ============================================================================
  // TIMEZONE - How This Location Relates to Solar Time
  // ============================================================================

  "timezone": {
    "iana_identifier": "America/New_York", // Replace with IANA timezone identifier
    "utc_offset_standard": "-05:00",       // Replace: standard time UTC offset
    "utc_offset_dst": "-04:00",            // Replace: DST offset (or same as standard if no DST)
    "observes_dst": true,                  // Replace: true or false

    // DST transition rules (only if observes_dst is true)
    "dst_start": "Second Sunday in March at 2:00 AM",  // Replace if applicable
    "dst_end": "First Sunday in November at 2:00 AM"   // Replace if applicable
  },

  // ============================================================================
  // CONTEXT - Additional Location Information
  // ============================================================================

  "context": {
    "primary_user": "User Name",                    // Replace with your name
    "primary_organization": "Organization Name",    // Replace with organization
    "primary_workplace": "Workplace Name",          // Replace (optional)
    "usage": "Primary location for temporal awareness"  // Replace with usage description
  },

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "created_date": "2025-01-01",          // Replace with today's date (YYYY-MM-DD)
    "last_updated": "2025-01-01",          // Replace with today's date
    "data_version": "1.0.0",
    "notes": "Initial location configuration"  // Replace with any relevant notes
  },

  // ============================================================================
  // EXTENSION - Room for Growth and Discovery
  // ============================================================================
  // Purpose: Allow future expansion without breaking existing structure
  // Examples: magnetic declination, climate zone, historical data sources

  "extension": {
    // Future fields can be added here as discovered
  }
}
