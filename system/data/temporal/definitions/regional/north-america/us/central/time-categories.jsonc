  // Categories based on sun position (requires celestial data)

  "celestial_anchored_categories": {
    "note": "These categories shift throughout the year based on sunrise/sunset times",
    "data_source": "temporal/celestial/solar/ data for St Louis, MO",
    "pre_dawn": {
      "name": "Pre-Dawn",
      "description": "From midnight to sunrise",
      "anchor": "sunrise",
