  // ============================================================================
  // CATEGORIZATION APPROACH
  // ============================================================================

  "approach": {
    "recommendation": "fixed_hour",
    "available_methods": {
      "fixed_hour": {
        "description": "Consistent clock-based boundaries year-round",
        "advantages": [
          "Simple and predictable",
          "Easy to calculate and compare",
          "Consistent across seasons",
          "No celestial data dependency"
        ],
        "disadvantages": [
          "Doesn't reflect natural light cycles",
          "6 AM in winter is dark, in summer is light"
        ],
        "recommended_for": "General purpose time categorization, pattern recognition, scheduling"
      },
      "celestial_anchored": {
        "description": "Categories based on sunrise/sunset (varies by season)",
        "advantages": [
          "Aligns with natural circadian rhythms",
          "Morning truly means 'after sunrise'",
          "Biblical precedent (day begins at evening)"
        ],
        "disadvantages": [
          "Categories shift throughout year",
          "More complex to calculate",
          "Harder to compare across seasons",
          "Requires celestial data access"
        ],
        "recommended_for": "Circadian rhythm analysis, natural time awareness, seasonal pattern tracking"
      }
    }
  },

