//
// HEALTH SCORING MAP (Total = 100):
// - Complete federal holidays: 30 pts
// - Relevant cultural holidays: 35 pts
// - Accurate date calculations: 35 pts

{
  "$schema": "../../../../../config/schemas/temporal/definitions/regional/holidays.schema.json",

