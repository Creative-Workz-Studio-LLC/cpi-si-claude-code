      "type": "federal",
      // UPDATE: Why this holiday exists
      "significance": "Beginning of calendar year",
      // UPDATE: How widely observed
      "observance": "Widely observed - most businesses closed",
      // OPTIONAL: Weekend observance rules
      "observed_rule": "If falls on Saturday, observed Friday. If Sunday, observed Monday."
    }
    // ADD MORE: Other fixed-date holidays
  },

  // ============================================================================
  // FEDERAL/NATIONAL HOLIDAYS (CALCULATED DATES)
  // ============================================================================
  // CUSTOMIZE: Holidays with variable dates (e.g., "first Monday in May")

  "federal_holidays_calculated": {
    "example_holiday": {
      "name": "Example Holiday",
      // UPDATE: How date is calculated
      "calculation": "First Monday in May",
      "month": 5,
      "week": "first",
      "day_of_week": "Monday",
      "type": "federal",
      "significance": "Description of what this holiday commemorates",
      "observance": "How widely observed"
    }
    // ADD MORE: Other calculated holidays
  },

  // ============================================================================
  // MAJOR CULTURAL HOLIDAYS (NON-FEDERAL)
