// ============================================================================
// METADATA
// ============================================================================
// Regional Definitions - Time Categories
// Purpose: Define time-of-day categories for specific timezone/region
// Scope: Regional (specific timezone)
// Schema: system/config/schemas/temporal/definitions/regional/time-categories.schema.json
//
// INSTRUCTIONS FOR USE:
// 1. Copy to: data/temporal/definitions/regional/<continent>/<country>/<region>/time-categories.jsonc
// 2. Update metadata with region details
// 3. Choose approach: fixed-hour (recommended) or celestial-anchored
// 4. Define morning/afternoon/evening/night boundaries
// 5. Document seasonal variations if using celestial anchoring
//
// HEALTH SCORING MAP (Total = 100):
// - Clear category definitions: 30 pts
// - Practical usability: 35 pts
// - Celestial integration (if applicable): 35 pts

{
  "$schema": "../../../../../config/schemas/temporal/definitions/regional/time-categories.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    // UPDATE: Region name
    "name": "Region Time Categories",
    "version": "1.0.0",
    "created": "2025-01-01",
    "last_updated": "2025-01-01",
    "purpose": "Define time-of-day categories for [Region Name]",
    "scope": "regional",
    "region": "Continent - Country - Region"
  },

  // ============================================================================
  // CATEGORIZATION APPROACH
  // ============================================================================
  // CHOOSE: fixed_hour (recommended) or celestial_anchored

  "approach": {
    // UPDATE: Which method are you using?
    "recommendation": "fixed_hour",
    "rationale": "Simple, predictable, consistent across seasons"
  },

  // ============================================================================
  // FIXED-HOUR CATEGORIES
  // ============================================================================
  // CUSTOMIZE: Define time boundaries using 24-hour format

  "fixed_hour_categories": {
    "morning": {
      "name": "Morning",
      "description": "Standard morning work hours",
      // UPDATE: Start time in HH:MM format
      "start_time": "08:00",
      // UPDATE: End time in HH:MM format
      "end_time": "12:00",
      "characteristics": [
        "Start of typical work day",
        "High alertness for many"
      ],
      "typical_activities": [
        "Deep work",
        "Important meetings"
      ]
    },
    "afternoon": {
      "name": "Afternoon",
      "description": "Post-lunch through late work hours",
      "start_time": "12:00",
      "end_time": "17:00",
      "characteristics": [
        "Midday energy for some",
        "Active collaboration hours"
      ],
      "typical_activities": [
        "Continued project work",
        "Meetings and collaboration"
      ]
    }
    // ADD MORE: Evening, night, early_morning categories
  },

  // ============================================================================
  // USAGE NOTES
  // ============================================================================

  "usage": {
    "purpose": "Provide consistent time-of-day categorization for this timezone",
    "recommendation": "Use fixed-hour categories for general purposes",
    "config_integration": "User configs may state preferences ('works better at night'). These categories provide standard definitions.",
    "flexibility": "Categories are tools for understanding, not rigid rules."
  },

  // ============================================================================
  // EXTENSIONS
  // ============================================================================

  "extensions": {
    "note": "Experimental patterns and discoveries - may be promoted to formal definitions or removed",
    "usage_guidance": "Add alternative time categorization approaches, refined boundaries, or seasonal adjustments here during discovery phase"
  }
}
