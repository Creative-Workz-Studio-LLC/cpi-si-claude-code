// ============================================================================
// METADATA
// ============================================================================
// Base Definitions - Temporal Units
// Purpose: Universal structure of time units (ISO 8601 standard)
// Scope: CPI-SI paradigm-wide (all instances, all users)
// Schema: system/config/schemas/temporal/definitions/base/temporal-units.schema.json
//
// INSTRUCTIONS FOR USE:
// 1. Copy this template to: data/temporal/definitions/base/temporal-units.jsonc
// 2. Generally should NOT need to modify - ISO 8601 is international standard
// 3. Update metadata dates
// 4. Only customize if CPI-SI adopts alternative temporal structures
// 5. Use extensions for experimental calendar systems
//
// NOTE: This is foundational - changes affect entire paradigm
//
// HEALTH SCORING MAP (Total = 100):
// - ISO 8601 compliance: 40 pts
// - Clear structure: 30 pts
// - Useful for calculations: 30 pts

{
  "$schema": "../../../../../config/schemas/temporal/definitions/base/temporal-units.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "name": "Temporal Units",
    "version": "1.0.0",
    // UPDATE: Set creation date
    "created": "2025-01-01",
    // UPDATE: Update when making changes
    "last_updated": "2025-01-01",
    "purpose": "Define universal temporal unit structure following ISO 8601",
    "scope": "paradigm-wide",
    "standards": ["ISO 8601", "ISO Week Date System"]
  },

  // ============================================================================
  // WEEK STRUCTURE
  // ============================================================================
  // STANDARD: ISO 8601 - Week starts Monday, ends Sunday

  "week": {
    "standard": "ISO 8601",
    // STANDARD: Do not change unless adopting different week system
    "start_day": "Monday",
    "end_day": "Sunday",
    "numbering": {
      "system": "ISO week-numbering year",
      "format": "YYYY-Www (e.g., 2025-W45)",
      "week_1_definition": "First week containing the year's first Thursday"
    },
    "days": [
      {
        "iso_day": 1,
        "name": "Monday",
        "abbreviation": "Mon",
        "type": "weekday"
      },
      {
        "iso_day": 7,
        "name": "Sunday",
        "abbreviation": "Sun",
        "type": "weekend"
      }
      // ADD: Other days (Tuesday-Saturday) following same pattern
    ]
  },

  // ============================================================================
  // MONTH STRUCTURE
  // ============================================================================
  // STANDARD: Gregorian calendar

  "month": {
    "standard": "Gregorian calendar",
    "months": [
      {
        "number": 1,
        "name": "January",
        "abbreviation": "Jan",
        "days": 31,
        "season": "winter",
        "quarter": 1
      }
      // ADD: Other months (February-December) following same pattern
      // NOTE: February has special leap year handling
    ]
  },

  // ============================================================================
  // TIME FORMAT STANDARDS
  // ============================================================================

  "formats": {
    "date": {
      "iso_8601": "2025-01-15",
      "example": "2025-11-08"
    },
    "datetime": {
      "iso_8601": "2025-01-15T14:30:00-06:00",
      "example": "2025-11-08T15:30:16-06:00"
    }
  },

  // ============================================================================
  // USAGE NOTES
  // ============================================================================

  "usage": {
    "purpose": "Provide consistent temporal unit definitions across CPI-SI paradigm",
    "iso_8601_rationale": "International standard ensures consistent interpretation across regions and systems",
    "week_start_monday": "ISO 8601 standard. Monday start enables consistent week-to-week comparison."
  },

  // ============================================================================
  // EXTENSIONS
  // ============================================================================
  // ADD DISCOVERIES: Experimental calendar systems or alternative structures

  "extensions": {
    "note": "Experimental patterns and discoveries - may be promoted to formal definitions or removed",
    "usage_guidance": "Add alternative temporal unit structures, calendar systems, or time formats here during discovery phase"
  }
}
