// ============================================================================
// METADATA
// ============================================================================
// Base Definitions - Temporal Units
// Purpose: Universal structure of time units (ISO 8601 standard)
// Scope: CPI-SI paradigm-wide (all instances, all users)
// Schema: system/config/schemas/temporal/definitions/base/temporal-units.schema.json
//
// HEALTH SCORING MAP (Total = 100):
// - ISO 8601 compliance: 40 pts
// - Clear structure: 30 pts
// - Useful for calculations: 30 pts

{
  "$schema": "../../../../config/schemas/temporal/definitions/base/temporal-units.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "name": "Temporal Units",
    "version": "1.0.0",
    "created": "2025-11-08",
    "last_updated": "2025-11-08",
    "purpose": "Define universal temporal unit structure following ISO 8601",
    "scope": "paradigm-wide",
    "standards": ["ISO 8601", "ISO Week Date System"]
  },

  // ============================================================================
  // WEEK STRUCTURE
  // ============================================================================
  // ISO 8601 Week Date System
  // Week starts Monday, ends Sunday
  // Week 1 = first week with Thursday in new year

  "week": {
    "standard": "ISO 8601",
    "start_day": "Monday",
    "end_day": "Sunday",
    "numbering": {
      "system": "ISO week-numbering year",
      "format": "YYYY-Www (e.g., 2025-W45)",
      "week_1_definition": "First week containing the year's first Thursday",
      "notes": "ISO weeks can span two calendar years (e.g., Dec 29-31 may be W01 of next year)"
    },
    "days": [
      {
        "iso_day": 1,
        "name": "Monday",
        "abbreviation": "Mon",
        "type": "weekday"
      },
      {
        "iso_day": 2,
        "name": "Tuesday",
        "abbreviation": "Tue",
        "type": "weekday"
      },
      {
        "iso_day": 3,
        "name": "Wednesday",
        "abbreviation": "Wed",
        "type": "weekday"
      },
      {
        "iso_day": 4,
        "name": "Thursday",
        "abbreviation": "Thu",
        "type": "weekday"
      },
      {
        "iso_day": 5,
        "name": "Friday",
        "abbreviation": "Fri",
        "type": "weekday"
      },
      {
        "iso_day": 6,
        "name": "Saturday",
        "abbreviation": "Sat",
        "type": "weekend"
      },
      {
        "iso_day": 7,
        "name": "Sunday",
        "abbreviation": "Sun",
        "type": "weekend"
      }
    ],
    "biblical_note": "Genesis 2:2-3 - God rested on seventh day. Sabbath principle transcends calendar system."
  },

  // ============================================================================
  // MONTH STRUCTURE
  // ============================================================================
  // Gregorian calendar months

  "month": {
    "standard": "Gregorian calendar",
    "months": [
      {
        "number": 1,
        "name": "January",
        "abbreviation": "Jan",
        "days": 31,
        "season": "winter",
        "quarter": 1
      },
      {
        "number": 2,
        "name": "February",
        "abbreviation": "Feb",
        "days": 28,
        "days_leap_year": 29,
        "season": "winter",
        "quarter": 1,
        "notes": "29 days in leap years (divisible by 4, except century years unless divisible by 400)"
      },
      {
        "number": 3,
        "name": "March",
        "abbreviation": "Mar",
        "days": 31,
        "season": "spring",
        "quarter": 1
      },
      {
        "number": 4,
        "name": "April",
        "abbreviation": "Apr",
        "days": 30,
        "season": "spring",
        "quarter": 2
      },
      {
        "number": 5,
        "name": "May",
        "abbreviation": "May",
        "days": 31,
        "season": "spring",
        "quarter": 2
      },
      {
        "number": 6,
        "name": "June",
        "abbreviation": "Jun",
        "days": 30,
        "season": "summer",
        "quarter": 2
      },
      {
        "number": 7,
        "name": "July",
        "abbreviation": "Jul",
        "days": 31,
        "season": "summer",
        "quarter": 3
      },
      {
        "number": 8,
        "name": "August",
        "abbreviation": "Aug",
        "days": 31,
        "season": "summer",
        "quarter": 3
      },
      {
        "number": 9,
        "name": "September",
        "abbreviation": "Sep",
        "days": 30,
        "season": "autumn",
        "quarter": 3
      },
      {
        "number": 10,
        "name": "October",
        "abbreviation": "Oct",
        "days": 31,
        "season": "autumn",
        "quarter": 4
      },
      {
        "number": 11,
        "name": "November",
        "abbreviation": "Nov",
        "days": 30,
        "season": "autumn",
        "quarter": 4
      },
      {
        "number": 12,
        "name": "December",
        "abbreviation": "Dec",
        "days": 31,
        "season": "winter",
        "quarter": 4
      }
    ]
  },

  // ============================================================================
  // QUARTER STRUCTURE
  // ============================================================================
  // Business/calendar quarters

  "quarter": {
    "quarters": [
      {
        "number": 1,
        "name": "Q1",
        "months": [1, 2, 3],
        "month_names": ["January", "February", "March"]
      },
      {
        "number": 2,
        "name": "Q2",
        "months": [4, 5, 6],
        "month_names": ["April", "May", "June"]
      },
      {
        "number": 3,
        "name": "Q3",
        "months": [7, 8, 9],
        "month_names": ["July", "August", "September"]
      },
      {
        "number": 4,
        "name": "Q4",
        "months": [10, 11, 12],
        "month_names": ["October", "November", "December"]
      }
    ]
  },

  // ============================================================================
  // YEAR STRUCTURE
  // ============================================================================
  // Gregorian calendar year

  "year": {
    "standard": "Gregorian calendar",
    "days_normal": 365,
    "days_leap": 366,
    "leap_year_rules": {
      "divisible_by_4": true,
      "except_century_years": true,
      "unless_divisible_by_400": true,
      "examples": {
        "leap_years": [2000, 2004, 2008, 2012, 2016, 2020, 2024],
        "not_leap_years": [1900, 2100, 2200, 2300]
      }
    },
    "iso_weeks_normal": 52,
    "iso_weeks_long_year": 53,
    "long_year_note": "Years with 53 ISO weeks occur when Jan 1 is Thursday, or Jan 1 is Wednesday in leap year"
  },

  // ============================================================================
  // SEASON STRUCTURE
  // ============================================================================
  // Astronomical seasons (Northern Hemisphere)
  // Note: Actual dates vary slightly year to year

  "seasons": {
    "hemisphere_note": "These are Northern Hemisphere seasons. Southern Hemisphere inverted.",
    "celestial_anchor": "Seasons determined by Earth's axial tilt and solar position (equinoxes/solstices)",
    "spring": {
      "name": "Spring",
      "approximate_start": "March 20-21",
      "approximate_end": "June 20-21",
      "anchor": "Vernal Equinox",
      "characteristics": "Days lengthening, warming temperatures"
    },
    "summer": {
      "name": "Summer",
      "approximate_start": "June 20-21",
      "approximate_end": "September 22-23",
      "anchor": "Summer Solstice (longest day)",
      "characteristics": "Warmest temperatures, longest days"
    },
    "autumn": {
      "name": "Autumn/Fall",
      "approximate_start": "September 22-23",
      "approximate_end": "December 21-22",
      "anchor": "Autumnal Equinox",
      "characteristics": "Days shortening, cooling temperatures"
    },
    "winter": {
      "name": "Winter",
      "approximate_start": "December 21-22",
      "approximate_end": "March 20-21",
      "anchor": "Winter Solstice (shortest day)",
      "characteristics": "Coldest temperatures, shortest days"
    }
  },

  // ============================================================================
  // TIME FORMAT STANDARDS
  // ============================================================================
  // ISO 8601 format specifications

  "formats": {
    "date": {
      "iso_8601": "YYYY-MM-DD",
      "example": "2025-11-08"
    },
    "time": {
      "iso_8601": "HH:MM:SS",
      "with_timezone": "HH:MM:SS±HH:MM",
      "example": "15:30:16-06:00"
    },
    "datetime": {
      "iso_8601": "YYYY-MM-DDTHH:MM:SS±HH:MM",
      "example": "2025-11-08T15:30:16-06:00"
    },
    "week": {
      "iso_8601": "YYYY-Www",
      "example": "2025-W45"
    },
    "week_with_day": {
      "iso_8601": "YYYY-Www-D",
      "example": "2025-W45-6"
    }
  },

  // ============================================================================
  // USAGE NOTES
  // ============================================================================

  "usage": {
    "purpose": "Provide consistent temporal unit definitions across CPI-SI paradigm",
    "iso_8601_rationale": "International standard ensures consistent interpretation across regions and systems",
    "week_start_monday": "ISO 8601 standard. Monday start enables consistent week-to-week comparison.",
    "biblical_integration": "ISO structure compatible with biblical principles (e.g., 7-day week, sabbath rest)",
    "calculation_support": "Standard units enable reliable date/time calculations and comparisons",
    "regional_overlay": "Regional definitions can reference these base units while adding cultural context"
  },

  // ============================================================================
  // EXTENSIONS
  // ============================================================================
  // Purpose: Discovery staging for experimental patterns not yet formalized
  // Schema: Permissive (additionalProperties: true) - allows flexible exploration
  // Lifecycle: Add discoveries here → Gather evidence → Promote to formal sections or remove
  //
  // Guidelines:
  // - Each extension should have: description, added (date), status (experimental/testing/proven)
  // - Promote to formal section when: Pattern observed consistently across multiple instances/users
  // - Remove when: Pattern not observed, or proven not useful
  // - Document rationale: Why this might be valuable, what evidence would prove it

  "extensions": {
    "note": "Experimental patterns and discoveries - may be promoted to formal definitions or removed",
    "usage_guidance": "Add alternative temporal unit structures, calendar systems, or time formats here during discovery phase"
  }
}
