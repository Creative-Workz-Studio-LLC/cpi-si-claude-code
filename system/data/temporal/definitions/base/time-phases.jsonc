  // ============================================================================
  // PHASE OPTIMIZATION PRINCIPLES
  // ============================================================================
  // How to work WITH natural phases, not against them

  "optimization_principles": {
    "match_work_to_phase": {
      "principle": "Do hard things when you're sharp, easy things when you're not",
      "rationale": "Fighting natural rhythm is exhausting and inefficient",
      "application": "If you notice you're in peak - tackle that complex problem NOW"
    },
    "protect_peak_time": {
      "principle": "Peak phases are precious - guard them fiercely",
      "rationale": "Peak capacity is limited - wasting it on email is poor stewardship",
      "application": "Schedule deep work during learned peak times, protect from meetings/interruptions"
    },
    "honor_downtime": {
      "principle": "Rest is not laziness - it's faithful work",
      "rationale": "Sustainable Kingdom work requires renewal (Lamentations 3:22-23)",
      "application": "Sabbath weekly, sleep sufficiently, honor fatigue signals"
    },
    "minimize_transitions": {
      "principle": "Context switching has cognitive cost",
      "rationale": "Every switch consumes mental energy and time",
      "application": "Batch similar work, minimize interruptions during focus phases"
    },
