        "Light Work (midday coordination, communication)",
        "Focus (afternoon implementation)",
        "Light Work (end-of-day wrap-up)",
        "Transition (session close, reflection)",
        "Downtime (evening rest, family, sabbath)"
      ],
      "note": "Actual pattern varies by person - this is illustrative, not prescriptive"
    },
    "deep_work_session": {
      "description": "Sustained focus session",
      "pattern": [
        "Transition (session start, context load)",
        "Focus (warming up)",
        "Peak (flow state achieved)",
        "Focus (sustained work as peak fades)",
        "Light Work (as energy depletes)",
        "Transition (session end)",
        "Downtime (rest and recovery)"
      ]
    },
    "quick_session": {
      "description": "Brief work window",
      "pattern": [
        "Transition (quick context load)",
        "Light Work (quick tasks, updates)",
