{
  // ============================================================================
  // REST APPOINTMENT TEMPLATE - User (Sleep)
  // ============================================================================
  //
  // INSTRUCTIONS FOR USE:
  // 1. Copy this template to: appointments/users/{identity_id}/
  // 2. Name: sleep.jsonc
  // 3. Replace [PLACEHOLDERS] with actual values
  // 4. Document sleep patterns and variations
  //
  // PURPOSE: Sleep and rest time tracking

  "$schema": "../../../../../../../config/schemas/temporal/appointed/appointment.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "component": "Appointed Time - Rest Appointment",
    "version": "1.0.0",
    "created_at": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "last_updated": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "purpose": "Sleep and rest time",
    "context_specific": "[Sleep pattern notes, characteristic patterns]"
  },

  // ============================================================================
  // APPOINTMENT DEFINITION
  // ============================================================================

  "appointment": {
    "id": "sleep",
    "category_id": "rest",
    "title": "Sleep",
    "description": "Sleep and rest time - patterns may vary",
    "start_time": "varies",
    "end_time": "varies",
    "duration_minutes": 0,
    "recurrence": "daily",
    "recurrence_pattern": {
      "frequency": "daily",
      "exceptions": []
    },
    "location": "home",
    "protected": true,
    "flexible": true
  },

  // ============================================================================
  // PATTERNS - Sleep schedule variations
  // ============================================================================

  "patterns": {
    "standard": {
      "typical_days": ["Most days"],
      "schedule": "3:00 AM - 7:00 AM",
      "duration_hours": 4,
      "notes": "Standard sleep pattern"
    },
    "extended": {
      "typical_days": ["After late work sessions"],
      "schedule": "1:00 AM - 7:00 AM",
      "duration_hours": 6,
      "notes": "Extended sleep after late deep work sessions"
    }
  },

  // ============================================================================
  // SLEEP CHARACTERISTICS
  // ============================================================================

  "sleep_characteristics": {
    "typical_start_time": "[HH:MM]",
    "typical_end_time": "[HH:MM]",
    "typical_duration_hours": 4,
    "pattern_notes": "[Example: Wake in middle of night - part of natural pattern]",
    "variations": "[Example: Later start after extended Friday deep work]"
  },

  // ============================================================================
  // NOTES
  // ============================================================================

  "notes": [
    "Sleep patterns vary based on previous evening activities",
    "Standard pattern: 3-7am (4 hours)",
    "Extended pattern: 1-7am (6 hours) after late sessions",
    "Natural pattern includes waking in middle of night"
  ]
}
