{
  // ============================================================================
  // SACRED TIME APPOINTMENT TEMPLATE - User
  // ============================================================================
  //
  // INSTRUCTIONS FOR USE:
  // 1. Copy this template to: appointments/users/{identity_id}/
  // 2. Name: church.jsonc, bible-study.jsonc, or personal-time.jsonc
  // 3. Replace [PLACEHOLDERS] with actual values
  // 4. Adjust recurrence pattern for specific appointment
  //
  // PURPOSE: Sacred/spiritual time appointments
  // TYPES: church, bible-study, personal-time

  "$schema": "../../../../../../../config/schemas/temporal/appointed/appointment.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "component": "Appointed Time - Sacred Time Appointment",
    "version": "1.0.0",
    "created_at": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "last_updated": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "purpose": "[Church service | Bible study | Personal time with God]",
    "biblical_foundation": "[Optional: relevant Scripture reference]",
    "context_specific": "[Church name, study group, intentionality notes]"
  },

  // ============================================================================
  // APPOINTMENT DEFINITION
  // ============================================================================

  "appointment": {
    "id": "[church|bible-study|personal-time]",
    "category_id": "sacred",
    "title": "[Church Service | Bible Study | Personal Time with God]",
    "description": "[Detailed description of this sacred time]",
    "start_time": "[HH:MM]",
    "end_time": "[HH:MM]",
    "duration_minutes": 60,
    "recurrence": "[weekly|daily]",
    "recurrence_pattern": {
      "frequency": "[weekly|daily]",
      "day_of_week": "[Sunday|Wednesday|varies]",
      "exceptions": []
    },
    "location": "[Church name/location or 'home']",
    "protected": true,
    "flexible": false
  },

  // ============================================================================
  // VARIATIONS (Optional - for flexible appointments like personal-time)
  // ============================================================================

  "variations": {
    "typical_pattern": {
      "typical_days": ["Daily"],
      "schedule": "After 7-8pm",
      "duration_minutes_range": [30, 60],
      "notes": "Flexible duration, building intentional practice"
    }
  },

  // ============================================================================
  // TIMING NOTES (For flexible appointments)
  // ============================================================================

  "timing_notes": {
    "intentionality": "[Building consistent practice, making this more regular]",
    "typical_window": "[Time window when this usually happens]"
  },

  // ============================================================================
  // NOTES
  // ============================================================================

  "notes": [
    "[Specific notes about this appointment]",
    "[Example: Church: Sunday 10am-12pm, weekly]",
    "[Example: Bible Study: Wednesday 7-8pm, weekly]",
    "[Example: Personal Time: Daily 30-60min after work, flexible]"
  ]
}
