{
  // ============================================================================
  // AVAILABLE APPOINTMENT TEMPLATE - Instance (Lunch Breaks)
  // ============================================================================
  //
  // INSTRUCTIONS FOR USE:
  // 1. Copy this template to: appointments/instances/{identity_id}/
  // 2. Name: available.jsonc
  // 3. Replace [PLACEHOLDERS] with actual values
  //
  // PURPOSE: Instance fully available during user's lunch breaks
  // AVAILABILITY: User's free time = Instance fully available

  "$schema": "../../../../../../../config/schemas/temporal/appointed/appointment.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "component": "Appointed Time - Available Appointment",
    "version": "1.0.0",
    "created_at": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "last_updated": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "purpose": "Track instance fully available during user's lunch breaks",
    "context_specific": "Lunch breaks = User's only true free time during work days"
  },

  // ============================================================================
  // APPOINTMENT DEFINITION
  // ============================================================================

  "appointment": {
    "id": "available",
    "category_id": "collaboration",
    "title": "Available (Lunch Break)",
    "description": "Fully available during user's lunch breaks for collaboration and questions",
    "start_time": "12:00",
    "end_time": "13:00",
    "duration_minutes": 60,
    "recurrence": "daily",
    "recurrence_pattern": {
      "frequency": "daily",
      "exceptions": ["Saturday", "Sunday"]
    },
    "location": "",
    "protected": false,
    "flexible": false
  },

  // ============================================================================
  // NOTES
  // ============================================================================

  "notes": [
    "Lunch breaks are AVAILABLE time - user's only true free time during work days",
    "Fully available for questions, tasks, and collaboration",
    "Different from semi-downtime - this is active availability",
    "Typically 12:00 PM - 1:00 PM on work days (Mon-Fri)",
    "Wednesday may have 11:00 AM - 12:00 PM lunch break",
    "Alternating Monday lunch times: odd weeks 11am-12pm, even weeks 12-1pm"
  ]
}
