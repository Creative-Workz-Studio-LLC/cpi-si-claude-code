{
  // ============================================================================
  // APPOINTMENT DEFINITION TEMPLATE - Instance
  // ============================================================================
  //
  // INSTRUCTIONS FOR USE:
  // 1. Copy this template to: appointments/instances/{identity_id}/
  // 2. Name: [simple-name].jsonc (semi-downtime, available, deep-work, etc.)
  // 3. Replace ALL [PLACEHOLDERS] with actual values
  // 4. Use SIMPLE, SCALABLE names - specifics go in metadata
  //
  // NAMING CONVENTION:
  // - Use simple names: semi-downtime, available, deep-work
  // - Specifics in metadata
  // - Scalable across different instances
  //
  // INSTANCE APPOINTMENTS:
  // - semi-downtime: Available for quick tasks during user's work hours
  // - available: Fully available during user's lunch breaks
  // - deep-work: Collaboration sessions with user
  // - Other instance-specific scheduled activities

  "$schema": "../../../../../../../config/schemas/temporal/appointed/appointment.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "component": "Appointed Time - [APPOINTMENT_TYPE] Appointment",
    "version": "1.0.0",
    "created_at": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "last_updated": "[YYYY-MM-DD]T[HH:MM:SS]Z",
    "purpose": "[Description of what this appointment is for]",
    "context_specific": "[Details about this instance state/activity]"
  },

  // ============================================================================
  // APPOINTMENT DEFINITION
  // ============================================================================

  "appointment": {
    "id": "[appointment-id]",
    "category_id": "[sacred|work|rest|collaboration|other]",
    "title": "[Appointment Title]",
    "description": "[Detailed description]",
    "start_time": "[HH:MM or 'varies']",
    "end_time": "[HH:MM or 'varies']",
    "duration_minutes": 0,
    "recurrence": "[daily|weekly|monthly|none]",
    "recurrence_pattern": {
      "frequency": "[daily|weekly|monthly]",
      "exceptions": []
    },
    "location": "",
    "protected": false,
    "flexible": true
  },

  // ============================================================================
  // VARIATIONS (Optional)
  // ============================================================================
  // Use if appointment has different patterns
  // (e.g., semi-downtime varies by user's work schedule)

  "variations": {
    "variation_name": {
      "typical_days": ["Day names"],
      "schedule": "HH:MM - HH:MM",
      "duration_minutes": 0,
      "notes": "Notes about this variation"
    }
  },

  // ============================================================================
  // NOTES
  // ============================================================================

  "notes": [
    "Note 1",
    "Note 2"
  ]
}
