{
  // ============================================================================
  // PLANNER PREFERENCES - Settings
  // ============================================================================
  // Purpose: Define how the planner behaves and displays information
  // Scope: Persistent preferences across sessions
  // Lifecycle: Updated when user/instance changes planner settings
  //
  // STRUCTURE PRINCIPLE:
  // - Core preferences (how planner works)
  // - Display settings (visual presentation)
  // - Behavior settings (automation, notifications)
  // - Integration settings (how planner connects with other systems)
  //
  // INHERITANCE:
  // System defaults → user/instance configs → planner preferences
  // Planner preferences override config defaults

  "$schema": "../../../../../config/schemas/temporal/appointed/planner-preferences.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "component": "Appointed Time - Planner Preferences",
    "version": "1.0.0",
    "last_updated": "2025-11-07",
    "purpose": "Planner behavior and display settings"
  },

  // ============================================================================
  // CORE PREFERENCES
  // ============================================================================

  "default_view": "week",              // day | week | month | year
  "week_starts_on": "monday",          // monday | sunday
  "timezone": "America/Chicago",       // From user config, can override
  "time_format": "12h",                // 12h | 24h
  "date_format": "YYYY-MM-DD",         // ISO-8601 format

  // ============================================================================
  // DISPLAY SETTINGS
  // ============================================================================

  "display": {
    "show_time_blocks": true,          // Visual time blocking
    "compact_mode": false,             // Condensed view
    "show_category_colors": true,      // Use category colors
    "show_duration": true,             // Display appointment duration
    "show_conflicts": true,            // Highlight scheduling conflicts
    "group_by_category": false,        // Group appointments by category
    "working_hours_highlight": true,   // Highlight typical work hours
    "working_hours_start": "09:00",    // From user schedule
    "working_hours_end": "17:00"
  },

  // ============================================================================
  // BEHAVIOR SETTINGS
  // ============================================================================

  "behavior": {
    "auto_refresh": true,              // Auto-refresh planner view
    "refresh_interval_seconds": 300,   // Refresh every 5 minutes
    "show_past_appointments": false,   // Hide past by default
    "past_retention_days": 30,         // Keep past appointments for 30 days
    "auto_archive": true,              // Auto-archive old appointments
    "conflict_detection": true,        // Detect scheduling conflicts
    "travel_time_buffer": 15           // Minutes buffer between appointments
  },

  // ============================================================================
  // NOTIFICATION SETTINGS
  // ============================================================================

  "notifications": {
    "enabled": true,                   // Enable planner notifications
    "reminder_before_minutes": [15, 60], // Remind 15min and 1hr before
    "daily_summary": true,             // Daily summary notification
    "daily_summary_time": "07:00",     // When to send daily summary
    "weekly_preview": true,            // Weekly preview on Sunday evening
    "conflict_alerts": true            // Alert on scheduling conflicts
  },

  // ============================================================================
  // COORDINATION SETTINGS
  // ============================================================================

  "coordination": {
    "show_coordination_appointments": true,  // Show shared appointments
    "coordination_color": "#4A90E2",         // Color for coordination appointments
    "auto_accept_coordination": false,       // Auto-accept coordination requests
    "coordination_reminder": true            // Remind about pending coordination
  },

  // ============================================================================
  // CATEGORY DISPLAY PREFERENCES
  // ============================================================================

  "category_preferences": {
    "sacred": {
      "always_show": true,             // Always visible, never filtered
      "highlight": true                // Visual emphasis
    },
    "work": {
      "always_show": true,
      "highlight": false
    },
    "rest": {
      "always_show": true,
      "highlight": true
    },
    "collaboration": {
      "always_show": true,
      "highlight": false
    }
  },

  // ============================================================================
  // INTEGRATION SETTINGS
  // ============================================================================

  "integrations": {
    "sync_with_celestial": true,       // Integrate with celestial time (seasons, sabbath)
    "sync_with_patterns": true,        // Learn from temporal patterns
    "sync_with_chronological": true,   // Track chronological time
    "external_calendars": []           // Future: External calendar integrations
  },

  // ============================================================================
  // EXTENSIONS - Discovery Space
  // ============================================================================

  "extensions": {
    // Future preferences that don't fit standard structure yet
  }
}
