{
  "metadata": {
    "name": "Disk Space Monitoring Configuration",
    "version": "1.0.0",
    "description": "Configuration for workspace disk space monitoring and threshold warnings",
    "created": "2025-11-12",
    "last_updated": "2025-11-12",
    "author": "Nova Dawn"
  },

  "thresholds": {
    "warning_percent": 80,
    "critical_percent": 95,
    "description": "Percentage thresholds for disk space warnings",
    "reasoning": {
      "warning": "80% allows time to clean up before critical",
      "critical": "95% indicates immediate action needed"
    }
  },

  "display": {
    "header_icon": "üíæ",
    "header_text": "Disk Space Status",
    "show_when_healthy": false,
    "healthy_message": "Disk space: {percent}% used ({available} available)",
    "description": "Display preferences for disk space monitoring"
  },

  "messages": {
    "warning": "Disk space: {percent}% used ({available} available)",
    "critical": "‚ö†Ô∏è  CRITICAL: Disk nearly full - {percent}% used (only {available} remaining)",
    "description": "Customizable warning messages (placeholders: {percent}, {available}, {used}, {total})"
  },

  "behavior": {
    "enabled": true,
    "check_on_session_start": true,
    "description": "Control when and if disk monitoring runs"
  },

  "future_extensions": {
    "description": "Planned features for future versions (not yet implemented)",
    "features": [
      {
        "name": "info_threshold",
        "description": "Optional informational threshold at lower percentage (e.g., 50%)",
        "example": "info_percent: 50"
      },
      {
        "name": "minimum_space_absolute",
        "description": "Warn if less than X GB remaining regardless of percentage",
        "example": "minimum_space_gb: 10"
      },
      {
        "name": "unit_preference",
        "description": "Control display units (auto, GB, TB, MB)",
        "example": "unit_preference: 'GB'"
      },
      {
        "name": "multiple_paths",
        "description": "Monitor multiple filesystem paths separately",
        "example": "paths: ['/home', '/var', '/tmp']"
      }
    ]
  }
}
