{
  "metadata": {
    "name": "Git Repository Monitoring Configuration",
    "version": "1.0.0",
    "description": "Configuration for workspace git repository status monitoring and display",
    "created": "2025-11-12",
    "last_updated": "2025-11-12",
    "author": "Nova Dawn"
  },

  "display": {
    "header_icon": "ðŸ“",
    "header_text": "Workspace Git Status",
    "show_when_clean": false,
    "clean_message": "Git repository is clean - no uncommitted changes or pending operations",
    "description": "Display preferences for git status monitoring"
  },

  "checks": {
    "uncommitted_changes": true,
    "ahead_of_remote": true,
    "behind_remote": true,
    "stashes": true,
    "conflicts": true,
    "description": "Control which git checks to perform and display"
  },

  "messages": {
    "uncommitted_changes": "{count} uncommitted change(s)",
    "ahead_of_remote": "{count} commit(s) ahead of remote",
    "behind_remote": "{count} commit(s) behind remote",
    "stashes": "{count} stash(es) present",
    "conflicts": "âš ï¸  {count} merge conflict(s)",
    "description": "Message templates for git status issues (placeholders: {count}, {branch})"
  },

  "behavior": {
    "enabled": true,
    "check_on_session_start": true,
    "description": "Control when and if git monitoring runs"
  },

  "future_extensions": {
    "description": "Planned features for future versions (not yet implemented)",
    "features": [
      {
        "name": "thresholds",
        "description": "Warn if uncommitted changes exceed threshold (e.g., >10 files)",
        "example": "uncommitted_warning_threshold: 10"
      },
      {
        "name": "branch_tracking",
        "description": "Track and warn about specific branch patterns (e.g., working on main)",
        "example": "warn_on_branches: ['main', 'master']"
      },
      {
        "name": "detailed_file_list",
        "description": "Show specific files changed, not just count",
        "example": "show_file_details: true"
      },
      {
        "name": "integration_with_ci",
        "description": "Show CI/CD status for current commit",
        "example": "show_ci_status: true"
      }
    ]
  }
}
