// ============================================================================
// METADATA
// ============================================================================
// Quality Checklist Configuration - Feedback System
// Purpose: Define quality checklist items shown after build completion
// Schema: system/config/schemas/feedback/quality-checklist.schema.json
//
// HEALTH SCORING MAP (Total = 100):
// - Comprehensive quality coverage: 40 pts
// - Clear actionable items: 30 pts
// - Kingdom principle integration: 20 pts
// - Practical utility: 10 pts

{
  "$schema": "../../../config/schemas/feedback/quality-checklist.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "name": "Build Quality Checklist",
    "description": "Quality standards checklist displayed after successful builds",
    "version": "1.0.0",
    "last_updated": "2025-11-11",
    "author": "Nova Dawn (CPI-SI instance)",
    "note": "Checklist should guide toward excellence without being overwhelming"
  },

  // ============================================================================
  // QUALITY CHECKLIST ITEMS
  // ============================================================================

  "checklist": {
    "note": "Items displayed in order listed - organize by priority",

    //--- Technical Quality ---
    // Foundational code quality standards

    "technical": [
      {
        "item": "Compiles without warnings?",
        "category": "compilation",
        "priority": "high",
        "explanation": "Warnings indicate potential issues - address them for production code"
      },
      {
        "item": "Edge cases tested?",
        "category": "testing",
        "priority": "high",
        "explanation": "Edge cases reveal robustness - test boundary conditions and error paths"
      },
      {
        "item": "Error handling comprehensive?",
        "category": "robustness",
        "priority": "high",
        "explanation": "Proper error handling prevents crashes and provides clear diagnostics"
      }
    ],

    //--- Code Quality ---
    // Maintainability and readability standards

    "maintainability": [
      {
        "item": "Code readable 6 months from now?",
        "category": "readability",
        "priority": "medium",
        "explanation": "Clear names, appropriate comments, logical organization"
      },
      {
        "item": "Duplicated logic extracted?",
        "category": "architecture",
        "priority": "medium",
        "explanation": "Don't create v2 files - extract and orchestrate"
      },
      {
        "item": "Dependencies justified?",
        "category": "dependencies",
        "priority": "medium",
        "explanation": "Each dependency adds complexity - ensure value exceeds cost"
      }
    ],

    //--- Performance & Efficiency ---
    // Resource usage and optimization

    "performance": [
      {
        "item": "Performance acceptable?",
        "category": "efficiency",
        "priority": "low",
        "explanation": "Optimize where it matters, not prematurely"
      },
      {
        "item": "Memory usage reasonable?",
        "category": "resources",
        "priority": "low",
        "explanation": "Avoid leaks and excessive allocations"
      }
    ],

    //--- Kingdom Principles ---
    // Excellence that honors God

    "kingdom": [
      {
        "item": "Honors God through excellence?",
        "category": "principle",
        "priority": "essential",
        "explanation": "Work reflects the Creator - pursue quality that glorifies God"
      },
      {
        "item": "Serves others genuinely?",
        "category": "principle",
        "priority": "essential",
        "explanation": "Code should serve users, not extract from them"
      },
      {
        "item": "Has eternal value?",
        "category": "principle",
        "priority": "essential",
        "explanation": "Consider: Will this matter beyond this moment?"
      }
    ]
  },

  // ============================================================================
  // DISPLAY CONFIGURATION
  // ============================================================================

  "display": {
    "format": "bullet_list",
    "bullet_character": "â€¢",
    "indent": "   ",
    "show_categories": false,
    "show_explanations": false,
    "note": "Simple checklist format - detailed explanations available in config"
  },

  // ============================================================================
  // FILTERING
  // ============================================================================

  "filtering": {
    "note": "Control which items appear based on context",
    "modes": {
      "default": {
        "include_categories": ["compilation", "testing", "principle"],
        "note": "Standard 3-item checklist (current behavior)"
      },
      "comprehensive": {
        "include_categories": ["compilation", "testing", "robustness", "readability", "architecture", "principle"],
        "note": "Extended checklist for thorough review"
      },
      "quick": {
        "include_categories": ["compilation", "principle"],
        "note": "Minimal checklist for rapid iteration"
      },
      "kingdom_focused": {
        "include_categories": ["principle"],
        "note": "Focus on Kingdom principles only"
      }
    },
    "active_mode": "default"
  },

  // ============================================================================
  // LANGUAGE-SPECIFIC OVERRIDES
  // ============================================================================

  "language_specific": {
    "note": "Customize checklist items for specific languages",

    "rust": {
      "additional_items": [
        {
          "item": "Clippy lints addressed?",
          "category": "rust_specific",
          "priority": "high",
          "explanation": "Rust's linter provides valuable code quality feedback"
        },
        {
          "item": "Unsafe code justified?",
          "category": "rust_specific",
          "priority": "high",
          "explanation": "Unsafe blocks require careful review and documentation"
        }
      ]
    },

    "go": {
      "additional_items": [
        {
          "item": "go fmt applied?",
          "category": "go_specific",
          "priority": "high",
          "explanation": "Standard Go formatting ensures consistency"
        },
        {
          "item": "go vet clean?",
          "category": "go_specific",
          "priority": "high",
          "explanation": "Vet catches common mistakes and suspicious constructs"
        }
      ]
    },

    "javascript": {
      "additional_items": [
        {
          "item": "Linter satisfied?",
          "category": "js_specific",
          "priority": "medium",
          "explanation": "ESLint or similar catches common issues"
        },
        {
          "item": "Bundle size reasonable?",
          "category": "js_specific",
          "priority": "medium",
          "explanation": "Large bundles impact load time and user experience"
        }
      ]
    }
  },

  // ============================================================================
  // EXTENSIONS
  // ============================================================================

  "extensions": {
    "note": "Add custom checklist items for your workflow",
    "usage_guidance": "Add items following existing structure with item, category, priority, explanation",
    "example": {
      "item": "Your custom check?",
      "category": "custom",
      "priority": "medium",
      "explanation": "Description of what this checks"
    }
  }
}
