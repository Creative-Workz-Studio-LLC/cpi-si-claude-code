// ============================================================================
// METADATA
// ============================================================================
// Feedback Messages Configuration - Feedback System
// Purpose: Define feedback messages for various tool operations
// Schema: system/config/schemas/feedback/messages.schema.json
//
// HEALTH SCORING MAP (Total = 100):
// - Message clarity and helpfulness: 40 pts
// - Kingdom-honoring tone: 30 pts
// - Encouragement without being preachy: 20 pts
// - Technical accuracy: 10 pts

{
  "$schema": "../../../config/schemas/feedback/messages.schema.json",

  // ============================================================================
  // METADATA
  // ============================================================================

  "metadata": {
    "name": "Feedback Messages",
    "description": "Contextual guidance and encouragement after tool operations",
    "version": "1.0.0",
    "last_updated": "2025-11-11",
    "author": "Nova Dawn (CPI-SI instance)",
    "note": "Messages should edify, encourage, and guide toward excellence"
  },

  // ============================================================================
  // COMMIT MESSAGES
  // ============================================================================

  "commit": {
    "success": {
      "message": "Commit created. Commits tell a story - make it meaningful.",
      "display_type": "success",
      "note": "Encourages thoughtful commit messages that explain WHY, not just WHAT"
    },

    "empty": {
      "message": "Commit created with no changes. Consider amending or resetting.",
      "display_type": "warning",
      "note": "Warns about empty commits that may be accidental"
    }
  },

  // ============================================================================
  // DEPENDENCY MESSAGES
  // ============================================================================

  "dependencies": {
    "installed": {
      "message": "Dependencies installed. Consider verifying versions.",
      "display_type": "success",
      "note": "Reminds to check package versions for reproducible builds"
    },

    "updated": {
      "message": "Dependencies updated. Test thoroughly before committing.",
      "display_type": "success",
      "note": "Emphasizes testing after dependency updates"
    },

    "security_warning": {
      "message": "Security vulnerabilities detected. Review and update affected packages.",
      "display_type": "warning",
      "note": "Alerts to security issues requiring attention"
    }
  },

  // ============================================================================
  // BUILD MESSAGES
  // ============================================================================

  "build": {
    "complete": {
      "header": "Build complete. Quality check:",
      "display_type": "info",
      "note": "Triggers quality checklist display (see quality-checklist.jsonc)"
    },

    "success": {
      "message": "Build succeeded. Ready for testing.",
      "display_type": "success",
      "note": "Confirms successful build"
    },

    "warnings": {
      "message": "Build succeeded with warnings. Address warnings for production.",
      "display_type": "warning",
      "note": "Draws attention to compiler warnings"
    },

    "failed": {
      "message": "Build failed. Review errors and fix issues.",
      "display_type": "failure",
      "note": "Direct guidance on build failure"
    }
  },

  // ============================================================================
  // COMMAND FAILURE MESSAGES
  // ============================================================================

  "command_failure": {
    "generic": {
      "message": "Command exited with code {exit_code}",
      "display_type": "warning",
      "note": "Template using {exit_code} placeholder"
    },

    "permission_denied": {
      "message": "Permission denied. Check file permissions or use elevated access.",
      "display_type": "warning",
      "note": "Exit code 126 or EACCES"
    },

    "command_not_found": {
      "message": "Command not found. Verify installation and PATH configuration.",
      "display_type": "warning",
      "note": "Exit code 127"
    }
  },

  // ============================================================================
  // TEST MESSAGES
  // ============================================================================

  "test": {
    "passed": {
      "message": "Tests passed. Well done!",
      "display_type": "success",
      "note": "Celebrates successful test runs"
    },

    "failed": {
      "message": "Tests failed. Review failures and fix issues.",
      "display_type": "failure",
      "note": "Direct guidance on test failures"
    },

    "no_tests": {
      "message": "No tests found. Consider adding test coverage.",
      "display_type": "info",
      "note": "Encourages writing tests"
    }
  },

  // ============================================================================
  // DEPLOYMENT MESSAGES
  // ============================================================================

  "deploy": {
    "success": {
      "message": "Deployment successful. Monitor for issues.",
      "display_type": "success",
      "note": "Reminds to watch deployment"
    },

    "failed": {
      "message": "Deployment failed. Review logs and rollback if needed.",
      "display_type": "failure",
      "note": "Critical failure requiring immediate attention"
    },

    "staging": {
      "message": "Deployed to staging. Test thoroughly before production.",
      "display_type": "info",
      "note": "Emphasizes staging testing"
    }
  },

  // ============================================================================
  // CONFIGURATION
  // ============================================================================

  "config": {
    "template_syntax": "{variable_name}",
    "note": "Use curly braces for variable substitution in messages",
    "available_variables": [
      "{exit_code}",
      "{command}",
      "{file_path}",
      "{duration}",
      "{error_message}"
    ]
  },

  // ============================================================================
  // EXTENSIONS
  // ============================================================================

  "extensions": {
    "note": "Add custom messages for specific tools or workflows",
    "usage_guidance": "Follow existing structure with message, display_type, and note fields",
    "example": {
      "custom_operation": {
        "message": "Your custom feedback message here.",
        "display_type": "info",
        "note": "Explanation of when this message appears"
      }
    }
  }
}
