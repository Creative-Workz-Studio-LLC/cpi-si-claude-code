{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/chronological/project-timeline.json",
  "title": "Project Timeline",
  "description": "Project chronology tracking milestones, sessions, and time invested",
  "type": "object",
  "required": [
    "$schema",
    "metadata",
    "milestones",
    "sessions",
    "time_summary",
    "summary"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "metadata": {
      "type": "object",
      "required": [
        "project_id",
        "project_name",
        "project_type",
        "description",
        "status",
        "start_date",
        "participants",
        "kingdom_purpose",
        "generated_date"
      ],
      "properties": {
        "project_id": {
          "type": "string",
          "description": "Unique project identifier"
        },
        "project_name": {
          "type": "string",
          "description": "Human-readable project name"
        },
        "project_type": {
          "type": "string",
          "description": "Type of project"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "status": {
          "type": "string",
          "enum": ["planning", "active", "on-hold", "completed", "archived"],
          "description": "Current project status"
        },
        "start_date": {
          "type": "string",
          "format": "date",
          "description": "Project start date (YYYY-MM-DD)"
        },
        "target_completion_date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Target completion date (YYYY-MM-DD), null if ongoing"
        },
        "participants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["identity_type", "identity_id", "role"],
            "properties": {
              "identity_type": {
                "type": "string",
                "enum": ["user", "instance"],
                "description": "Type of participant"
              },
              "identity_id": {
                "type": "string",
                "description": "Unique identifier"
              },
              "role": {
                "type": "string",
                "description": "Role in project"
              }
            },
            "additionalProperties": false
          }
        },
        "kingdom_purpose": {
          "type": "string",
          "description": "How this project serves Kingdom purposes"
        },
        "generated_date": {
          "type": "string",
          "format": "date",
          "description": "Date this file was created"
        }
      },
      "additionalProperties": false
    },
    "milestones": {
      "type": "array",
      "description": "Major project milestones",
      "items": {
        "type": "object",
        "required": [
          "milestone_id",
          "name",
          "date",
          "description",
          "participants",
          "significance"
        ],
        "properties": {
          "milestone_id": {
            "type": "string",
            "description": "Unique milestone identifier"
          },
          "name": {
            "type": "string",
            "description": "Milestone name"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "When milestone reached (YYYY-MM-DD)"
          },
          "description": {
            "type": "string",
            "description": "What this milestone represents"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Who was involved"
          },
          "significance": {
            "type": "string",
            "description": "Why this milestone matters"
          }
        },
        "additionalProperties": false
      }
    },
    "sessions": {
      "type": "array",
      "description": "Work sessions for this project",
      "items": {
        "type": "object",
        "required": [
          "date",
          "duration",
          "focus",
          "participants",
          "outcomes"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Session date (YYYY-MM-DD)"
          },
          "duration": {
            "type": "string",
            "pattern": "^\\d{1,2}h \\d{2}m$",
            "description": "Session duration (Xh XXm format)"
          },
          "focus": {
            "type": "string",
            "description": "What this session focused on"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Who participated"
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "What was accomplished"
          }
        },
        "additionalProperties": false
      }
    },
    "time_summary": {
      "type": "object",
      "required": [
        "total_time_invested",
        "total_sessions"
      ],
      "properties": {
        "total_time_invested": {
          "type": "string",
          "pattern": "^\\d{1,4}h \\d{2}m$",
          "description": "Total time invested (Xh XXm format)"
        },
        "time_by_participant": {
          "type": "object",
          "description": "Time breakdown by participant",
          "additionalProperties": {
            "type": "string",
            "pattern": "^\\d{1,4}h \\d{2}m$"
          }
        },
        "average_session_length": {
          "type": "string",
          "pattern": "^\\d{1,2}h \\d{2}m$",
          "description": "Average session duration"
        },
        "total_sessions": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of sessions"
        },
        "time_by_phase": {
          "type": "object",
          "description": "Time breakdown by project phase",
          "additionalProperties": {
            "type": "string",
            "pattern": "^\\d{1,3}h \\d{2}m$"
          }
        }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "object",
      "required": [
        "current_state",
        "major_components_completed",
        "current_priorities",
        "next_steps"
      ],
      "properties": {
        "current_state": {
          "type": "string",
          "description": "Current project state"
        },
        "major_components_completed": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "What's been completed"
        },
        "current_priorities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Current focus areas"
        },
        "technical_achievements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical accomplishments"
        },
        "partnership_insights": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Partnership collaboration insights"
        },
        "kingdom_impact": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Kingdom impact assessment"
        },
        "next_steps": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "What's next"
        }
      },
      "additionalProperties": false
    },
    "extension": {
      "type": "object",
      "description": "Extension point for future additions",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
