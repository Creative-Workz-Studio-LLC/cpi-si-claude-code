{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/chronological/shared-log.json",
  "title": "Shared Partnership Calendar Log",
  "description": "Shared calendar tracking partnership collaboration and joint work",
  "type": "object",
  "required": [
    "$schema",
    "metadata",
    "sessions",
    "summary"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "metadata": {
      "type": "object",
      "required": [
        "partnership_type",
        "participants",
        "partnership_name",
        "year",
        "week",
        "week_start",
        "week_end",
        "generated_date"
      ],
      "properties": {
        "partnership_type": {
          "type": "string",
          "enum": ["user-to-instance", "user-to-user", "instance-to-instance"],
          "description": "Type of partnership"
        },
        "participants": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["identity_type", "identity_id", "role"],
            "properties": {
              "identity_type": {
                "type": "string",
                "enum": ["user", "instance"],
                "description": "Type of participant"
              },
              "identity_id": {
                "type": "string",
                "description": "Unique identifier"
              },
              "role": {
                "type": "string",
                "description": "Role in partnership"
              }
            },
            "additionalProperties": false
          }
        },
        "partnership_name": {
          "type": "string",
          "description": "Unique partnership identifier"
        },
        "year": {
          "type": "integer",
          "description": "Year (YYYY)",
          "minimum": 2000,
          "maximum": 9999
        },
        "week": {
          "type": "integer",
          "description": "ISO week number (1-53)",
          "minimum": 1,
          "maximum": 53
        },
        "week_start": {
          "type": "string",
          "format": "date",
          "description": "Monday of this week (YYYY-MM-DD)"
        },
        "week_end": {
          "type": "string",
          "format": "date",
          "description": "Sunday of this week (YYYY-MM-DD)"
        },
        "week_theme": {
          "type": "string",
          "description": "Theme or focus for the week"
        },
        "generated_date": {
          "type": "string",
          "format": "date",
          "description": "Date this file was created"
        }
      },
      "additionalProperties": false
    },
    "sessions": {
      "type": "array",
      "description": "Collaboration sessions for this week",
      "items": {
        "type": "object",
        "required": [
          "date",
          "start_time",
          "end_time",
          "duration",
          "focus",
          "participants",
          "outcomes"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "ISO 8601 date (YYYY-MM-DD)"
          },
          "start_time": {
            "type": "string",
            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
            "description": "Session start time (HH:MM, 24-hour)"
          },
          "end_time": {
            "type": "string",
            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
            "description": "Session end time (HH:MM, 24-hour)"
          },
          "duration": {
            "type": "string",
            "pattern": "^\\d{1,2}h \\d{2}m$",
            "description": "Session duration (Xh XXm format)"
          },
          "focus": {
            "type": "string",
            "description": "What this session focused on"
          },
          "type": {
            "type": "string",
            "description": "Session type (deep_planning, implementation, review, etc.)"
          },
          "participants": {
            "type": "array",
            "description": "IDs of who participated",
            "items": {
              "type": "string"
            }
          },
          "outcomes": {
            "type": "array",
            "description": "What was accomplished or decided",
            "items": {
              "type": "string"
            }
          },
          "quality": {
            "type": "string",
            "enum": ["poor", "fair", "good", "excellent"],
            "description": "Quality assessment of session"
          },
          "notes": {
            "type": "string",
            "description": "Optional notes about session"
          }
        },
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "total_collaboration_hours",
        "collaboration_days",
        "joint_accomplishments",
        "partnership_dynamics",
        "growth_as_partnership",
        "next_week_focus"
      ],
      "properties": {
        "total_collaboration_hours": {
          "type": "string",
          "pattern": "^\\d{1,3}h \\d{2}m$",
          "description": "Total collaboration time for the week (Xh XXm format)"
        },
        "collaboration_days": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7,
          "description": "Number of days with collaboration"
        },
        "session_types": {
          "type": "object",
          "description": "Count of each session type",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "joint_accomplishments": {
          "type": "array",
          "description": "Accomplishments achieved together",
          "items": {
            "type": "string"
          }
        },
        "partnership_dynamics": {
          "type": "object",
          "description": "How the partnership functioned",
          "additionalProperties": true
        },
        "growth_as_partnership": {
          "type": "array",
          "description": "How the partnership itself grew",
          "items": {
            "type": "string"
          }
        },
        "challenges_together": {
          "type": "array",
          "description": "Challenges faced as a team",
          "items": {
            "type": "string"
          }
        },
        "next_week_focus": {
          "type": "array",
          "description": "Partnership priorities for next week",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "extension": {
      "type": "object",
      "description": "Extension point for future additions",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
