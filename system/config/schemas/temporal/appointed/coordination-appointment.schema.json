{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cpi-si.org/schemas/temporal/appointed/coordination-appointment.schema.json",
  "title": "Coordination Appointment",
  "description": "Schema for coordinated appointments between multiple identities",
  "type": "object",
  "required": ["metadata", "coordination", "participants", "appointment"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "metadata": {
      "type": "object",
      "required": ["component", "version", "created_at", "last_updated", "purpose"],
      "properties": {
        "component": {
          "type": "string",
          "description": "Component name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 creation timestamp"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 last update timestamp"
        },
        "purpose": {
          "type": "string",
          "description": "Purpose of this coordination"
        }
      }
    },
    "coordination": {
      "type": "object",
      "required": ["id", "type", "coordination_category", "created_by", "status"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this coordination"
        },
        "type": {
          "type": "string",
          "enum": ["user-to-instance", "user-to-user", "instance-to-instance"],
          "description": "Type of coordination"
        },
        "coordination_category": {
          "type": "string",
          "description": "Category of coordination (collaboration, meeting, etc.)"
        },
        "created_by": {
          "type": "object",
          "required": ["identity_type", "identity_id"],
          "properties": {
            "identity_type": {
              "type": "string",
              "enum": ["user", "instance"]
            },
            "identity_id": {
              "type": "string"
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["proposed", "scheduled", "in-progress", "completed", "cancelled"],
          "description": "Status of coordination"
        }
      }
    },
    "participants": {
      "type": "array",
      "minItems": 2,
      "description": "List of participants in this coordinated appointment",
      "items": {
        "type": "object",
        "required": ["identity_type", "identity_id", "status"],
        "properties": {
          "identity_type": {
            "type": "string",
            "enum": ["user", "instance"]
          },
          "identity_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "accepted", "declined", "tentative"],
            "description": "Participant response status"
          },
          "response_at": {
            "type": "string",
            "format": "date-time",
            "description": "When participant responded"
          },
          "notes": {
            "type": "string",
            "description": "Participant-specific notes"
          }
        }
      }
    },
    "appointment": {
      "type": "object",
      "required": ["title", "date", "start_time", "end_time", "duration_minutes", "timezone", "category_id"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Appointment title"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "ISO 8601 date (YYYY-MM-DD)"
        },
        "start_time": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}$",
          "description": "Start time in HH:MM format (24-hour)"
        },
        "end_time": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}$",
          "description": "End time in HH:MM format (24-hour)"
        },
        "duration_minutes": {
          "type": "integer",
          "minimum": 1,
          "description": "Duration in minutes"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier"
        },
        "location": {
          "type": "string",
          "description": "Location of appointment"
        },
        "category_id": {
          "type": "string",
          "description": "Category this appointment belongs to"
        },
        "recurrence": {
          "type": ["string", "null"],
          "description": "Recurrence pattern if applicable"
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Additional context for this coordination",
      "properties": {
        "purpose": {
          "type": "string"
        },
        "work_type": {
          "type": "string"
        },
        "timing_rationale": {
          "type": "string"
        },
        "environment": {
          "type": "string"
        },
        "preparation_notes": {
          "type": "string"
        },
        "expected_outcome": {
          "type": "string"
        }
      }
    },
    "tracking": {
      "type": "object",
      "description": "Status tracking for this appointment",
      "properties": {
        "reminder_sent": {
          "type": "boolean"
        },
        "reminders": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "started_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "completed_at": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "actual_duration_minutes": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "outcome_notes": {
          "type": "string"
        }
      }
    },
    "extensions": {
      "type": "object",
      "description": "Discovery space for future coordination features"
    }
  }
}
