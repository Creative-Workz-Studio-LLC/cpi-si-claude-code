{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cpi-si.org/schemas/temporal/appointed/personal-day.schema.json",
  "title": "Personal Day Appointments",
  "description": "Schema for daily appointment tracking for a single identity (user or instance)",
  "type": "object",
  "required": ["metadata", "day", "appointments", "hourly_breakdown", "summary"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "metadata": {
      "type": "object",
      "required": ["component", "version", "created_at", "last_updated", "purpose"],
      "properties": {
        "component": {
          "type": "string",
          "description": "Component name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 creation timestamp"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 last update timestamp"
        },
        "purpose": {
          "type": "string",
          "description": "Purpose of this daily schedule"
        }
      }
    },
    "day": {
      "type": "object",
      "required": ["date", "day_name", "iso_week", "identity_type", "identity_id", "timezone"],
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "ISO 8601 date (YYYY-MM-DD)"
        },
        "day_name": {
          "type": "string",
          "enum": ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
          "description": "Day of the week"
        },
        "iso_week": {
          "type": "string",
          "pattern": "^\\d{4}-W\\d{2}$",
          "description": "ISO week number (YYYY-Www)"
        },
        "identity_type": {
          "type": "string",
          "enum": ["user", "instance"],
          "description": "Type of identity"
        },
        "identity_id": {
          "type": "string",
          "description": "Unique identifier for the identity"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier"
        }
      }
    },
    "appointments": {
      "type": "array",
      "description": "List of appointments for this day, ordered by start time",
      "items": {
        "type": "object",
        "required": ["id", "category_id", "title", "start_time", "end_time", "duration_minutes", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this appointment instance"
          },
          "appointment_ref": {
            "type": ["string", "null"],
            "description": "Reference to recurring appointment definition"
          },
          "category_id": {
            "type": "string",
            "description": "Category this appointment belongs to"
          },
          "title": {
            "type": "string",
            "description": "Appointment title"
          },
          "start_time": {
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}$",
            "description": "Start time in HH:MM format (24-hour)"
          },
          "end_time": {
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}$",
            "description": "End time in HH:MM format (24-hour)"
          },
          "duration_minutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Duration in minutes"
          },
          "status": {
            "type": "string",
            "enum": ["scheduled", "completed", "cancelled", "rescheduled"],
            "description": "Appointment status"
          },
          "coordination_id": {
            "type": ["string", "null"],
            "description": "Reference to coordination file if this is a coordinated appointment"
          },
          "notes": {
            "type": "string",
            "description": "Optional notes about this appointment"
          }
        }
      }
    },
    "hourly_breakdown": {
      "type": "object",
      "description": "Hour-by-hour mapping of the day (00:00 to 23:00)",
      "patternProperties": {
        "^(0[0-9]|1[0-9]|2[0-3]):00$": {
          "type": "object",
          "required": ["status", "appointment_id", "category"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["scheduled", "unscheduled"],
              "description": "Whether this hour has an appointment"
            },
            "appointment_id": {
              "type": ["string", "null"],
              "description": "ID of appointment occupying this hour"
            },
            "category": {
              "type": ["string", "null"],
              "description": "Category of appointment in this hour"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "object",
      "required": ["total_appointments", "total_scheduled_hours", "by_category", "first_appointment", "last_appointment", "has_conflicts", "conflicts"],
      "properties": {
        "total_appointments": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of appointments"
        },
        "total_scheduled_hours": {
          "type": "number",
          "minimum": 0,
          "description": "Total hours scheduled"
        },
        "by_category": {
          "type": "object",
          "required": ["sacred", "work", "rest", "collaboration", "other"],
          "properties": {
            "sacred": {
              "type": "integer",
              "minimum": 0
            },
            "work": {
              "type": "integer",
              "minimum": 0
            },
            "rest": {
              "type": "integer",
              "minimum": 0
            },
            "collaboration": {
              "type": "integer",
              "minimum": 0
            },
            "other": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "first_appointment": {
          "type": ["string", "null"],
          "pattern": "^\\d{2}:\\d{2}$",
          "description": "Start time of first appointment"
        },
        "last_appointment": {
          "type": ["string", "null"],
          "pattern": "^\\d{2}:\\d{2}$",
          "description": "Start time of last appointment"
        },
        "has_conflicts": {
          "type": "boolean",
          "description": "Whether there are scheduling conflicts"
        },
        "conflicts": {
          "type": "array",
          "description": "List of conflicts if any",
          "items": {
            "type": "object"
          }
        },
        "notes": {
          "type": "string",
          "description": "Summary notes for the day"
        }
      }
    },
    "extensions": {
      "type": "object",
      "description": "Discovery space for future appointment tracking features"
    }
  }
}
