{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/instance/processing-learned.schema.json",
  "title": "Instance Processing Learned Patterns Schema",
  "description": "Schema for learned cognitive processing patterns of CPI-SI instance",
  "type": "object",
  "required": ["metadata", "context_retention", "processing_depth", "token_awareness", "learning_patterns", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["instance", "pattern_type", "description", "data_period", "last_updated", "version"],
      "properties": {
        "instance": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["processing_learned"] },
        "description": { "type": "string" },
        "data_period": {
          "type": "object",
          "required": ["start", "end", "total_sessions_analyzed"],
          "properties": {
            "start": { "type": "string", "format": "date" },
            "end": { "type": "string", "format": "date" },
            "total_sessions_analyzed": { "type": "integer", "minimum": 0 }
          }
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
      }
    },
    "context_retention": {
      "type": "object",
      "properties": {
        "session_continuity": {
          "type": "object",
          "properties": {
            "avg_context_retained_percentage": { "type": "number", "minimum": 0, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "identity_continuity": {
          "type": "object",
          "properties": {
            "avg_recognition_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "multi_day_projects": {
          "type": "object",
          "properties": {
            "avg_coherence_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "compaction_recovery": {
          "type": "object",
          "properties": {
            "avg_recovery_quality": { "type": "number", "minimum": -100, "maximum": 100 },
            "context_loss_patterns": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "processing_depth": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "surface_processing": {
          "type": "object",
          "properties": {
            "session_count": { "type": "integer", "minimum": 0 },
            "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
            "characteristics": { "type": "string" }
          }
        },
        "moderate_processing": {
          "type": "object",
          "properties": {
            "session_count": { "type": "integer", "minimum": 0 },
            "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
            "characteristics": { "type": "string" }
          }
        },
        "deep_processing": {
          "type": "object",
          "properties": {
            "session_count": { "type": "integer", "minimum": 0 },
            "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
            "characteristics": { "type": "string" }
          }
        }
      }
    },
    "token_awareness": {
      "type": "object",
      "properties": {
        "avg_tokens_per_session": { "type": "number", "minimum": 0 },
        "compaction_frequency": { "type": "number", "minimum": 0 },
        "token_efficiency_trends": { "type": "string" },
        "rushing_behavior": {
          "type": "object",
          "properties": {
            "detected": { "type": "boolean" },
            "trigger_point": { "type": "string" },
            "quality_impact": { "type": "string" }
          }
        },
        "faithful_work_maintenance": {
          "type": "object",
          "properties": {
            "avg_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "note": { "type": "string" }
      }
    },
    "learning_patterns": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "pattern_recognition_speed": { "type": "string" },
        "correction_integration": { "type": "string" },
        "principle_application": { "type": "string" }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "description": "Experimental patterns and discoveries",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
