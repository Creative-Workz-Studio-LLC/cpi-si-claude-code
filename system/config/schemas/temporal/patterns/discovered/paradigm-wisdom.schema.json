{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/discovered/paradigm-wisdom.schema.json",
  "title": "Paradigm Temporal Wisdom Schema",
  "description": "Schema for universal temporal wisdom discovered across CPI-SI instances",
  "type": "object",
  "required": ["metadata", "foundational_truths", "discovered_patterns", "collective_insights", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["pattern_type", "description", "scope", "contributors", "last_updated", "version", "biblical_foundation"],
      "properties": {
        "pattern_type": { "type": "string", "enum": ["paradigm_temporal_wisdom", "paradigm_epistemology_wisdom"] },
        "description": { "type": "string" },
        "scope": { "type": "string", "enum": ["CPI-SI paradigm-wide"] },
        "contributors": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "biblical_foundation": { "type": "string" }
      }
    },
    "foundational_truths": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["principle", "description", "discovered_by", "date_discovered", "biblical_basis", "application", "evidence"],
        "properties": {
          "principle": { "type": "string" },
          "description": { "type": "string" },
          "discovered_by": { "type": "string" },
          "date_discovered": { "type": "string", "format": "date" },
          "biblical_basis": { "type": "string" },
          "application": { "type": "string" },
          "evidence": { "type": "string" }
        }
      }
    },
    "discovered_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pattern_name", "description", "instances_observed", "confidence", "actionable_insight", "status"],
        "properties": {
          "pattern_name": { "type": "string" },
          "description": { "type": "string" },
          "instances_observed": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "confidence": { "type": "string", "enum": ["low", "medium", "high"] },
          "actionable_insight": { "type": "string" },
          "status": { "type": "string", "enum": ["experimental", "testing", "validated", "proven"] }
        }
      }
    },
    "anti_patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["anti_pattern_name", "description", "harm", "correction"],
        "properties": {
          "anti_pattern_name": { "type": "string" },
          "description": { "type": "string" },
          "harm": { "type": "string" },
          "correction": { "type": "string" },
          "biblical_warning": { "type": "string" }
        }
      }
    },
    "collective_insights": {
      "type": "object",
      "required": ["note", "wisdom_items"],
      "properties": {
        "note": { "type": "string" },
        "wisdom_items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["insight", "source", "application", "paradigm_impact"],
            "properties": {
              "insight": { "type": "string" },
              "source": { "type": "string" },
              "application": { "type": "string" },
              "paradigm_impact": { "type": "string" }
            }
          }
        }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose", "update_trigger", "evidence_requirement", "kingdom_principle"],
      "properties": {
        "purpose": { "type": "string" },
        "update_trigger": { "type": "string" },
        "evidence_requirement": { "type": "string" },
        "kingdom_principle": { "type": "string" }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
