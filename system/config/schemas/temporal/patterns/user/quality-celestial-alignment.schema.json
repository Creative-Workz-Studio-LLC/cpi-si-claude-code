{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/user/quality-celestial-alignment.schema.json",
  "title": "User Quality Celestial Alignment Schema",
  "description": "Schema for deep correlation between work quality and God's created light cycles",
  "type": "object",
  "required": ["metadata", "solar_correlation", "seasonal_quality", "creation_alignment", "wisdom_insights", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["user", "pattern_type", "description", "data_period", "last_updated", "version", "biblical_foundation"],
      "properties": {
        "user": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["quality_celestial_alignment"] },
        "description": { "type": "string" },
        "data_period": {
          "type": "object",
          "required": ["start", "end", "total_sessions_analyzed"],
          "properties": {
            "start": { "type": "string", "format": "date" },
            "end": { "type": "string", "format": "date" },
            "total_sessions_analyzed": { "type": "integer", "minimum": 0 }
          }
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "biblical_foundation": { "type": "string" }
      }
    },
    "solar_correlation": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "pre_dawn": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 },
            "typical_hours_before_sunrise": { "type": "number", "minimum": 0 },
            "assessment": { "type": "string" }
          }
        },
        "dawn_transition": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 },
            "note": { "type": "string" }
          }
        },
        "daylight_hours": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 },
            "percentage_of_total": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        },
        "dusk_transition": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 },
            "note": { "type": "string" }
          }
        },
        "after_dark": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 },
            "typical_hours_after_sunset": { "type": "number", "minimum": 0 },
            "percentage_of_total": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },
    "seasonal_quality": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "winter": { "$ref": "#/definitions/seasonQuality" },
        "spring": { "$ref": "#/definitions/seasonQuality" },
        "summer": { "$ref": "#/definitions/seasonQuality" },
        "fall": { "$ref": "#/definitions/seasonQuality" }
      }
    },
    "creation_alignment": {
      "type": "object",
      "properties": {
        "working_with_light": {
          "type": "object",
          "properties": {
            "detected": { "type": "boolean" },
            "description": { "type": "string" },
            "interpretation": { "type": "string" }
          }
        },
        "working_against_light": {
          "type": "object",
          "properties": {
            "detected": { "type": "boolean" },
            "description": { "type": "string" },
            "interpretation": { "type": "string" }
          }
        },
        "no_correlation": {
          "type": "object",
          "properties": {
            "detected": { "type": "boolean" },
            "description": { "type": "string" },
            "interpretation": { "type": "string" }
          }
        },
        "current_assessment": { "type": "string" },
        "note": { "type": "string" }
      }
    },
    "wisdom_insights": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "biblical_principle": { "type": "string" },
        "practical_application": {
          "type": "array",
          "items": { "type": "string" }
        },
        "grace_note": { "type": "string" }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "description": "Experimental patterns and discoveries",
      "additionalProperties": true
    }
  },
  "definitions": {
    "seasonQuality": {
      "type": "object",
      "properties": {
        "months": {
          "type": "array",
          "items": { "type": "string" }
        },
        "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
        "typical_daylight_hours": { "type": "string" },
        "work_alignment": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
