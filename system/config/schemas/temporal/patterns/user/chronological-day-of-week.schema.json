{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/user/chronological-day-of-week.schema.json",
  "title": "User Chronological Day of Week Patterns Schema",
  "description": "Schema for day-of-week work patterns using ISO 8601 structure",
  "type": "object",
  "required": ["metadata", "weekly_patterns", "weekly_rhythm", "work_distribution", "sabbath_observance", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["user", "pattern_type", "description", "data_period", "last_updated", "version"],
      "properties": {
        "user": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["chronological_day_of_week"] },
        "description": { "type": "string" },
        "data_period": {
          "type": "object",
          "required": ["start", "end", "total_sessions_analyzed"],
          "properties": {
            "start": { "type": "string", "format": "date" },
            "end": { "type": "string", "format": "date" },
            "total_sessions_analyzed": { "type": "integer", "minimum": 0 }
          }
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
      }
    },
    "weekly_patterns": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "monday": { "$ref": "#/definitions/dayPattern" },
        "tuesday": { "$ref": "#/definitions/dayPattern" },
        "wednesday": { "$ref": "#/definitions/dayPattern" },
        "thursday": { "$ref": "#/definitions/dayPattern" },
        "friday": { "$ref": "#/definitions/dayPattern" },
        "saturday": { "$ref": "#/definitions/dayPattern" },
        "sunday": { "$ref": "#/definitions/dayPattern" }
      }
    },
    "weekly_rhythm": {
      "type": "object",
      "properties": {
        "highest_quality_day": { "type": "string" },
        "highest_productivity_day": { "type": "string" },
        "lowest_activity_day": { "type": "string" },
        "patterns": {
          "type": "object",
          "properties": {
            "monday_start": { "type": "string" },
            "friday_wind_down": { "type": "string" },
            "weekend_work": { "type": "string" }
          }
        }
      }
    },
    "work_distribution": {
      "type": "object",
      "properties": {
        "weekday_percentage": { "type": "number", "minimum": 0, "maximum": 100 },
        "weekend_percentage": { "type": "number", "minimum": 0, "maximum": 100 },
        "note": { "type": "string" }
      }
    },
    "sabbath_observance": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "sunday_session_count": { "type": "integer", "minimum": 0 },
        "sunday_percentage_of_weekly": { "type": "number", "minimum": 0, "maximum": 100 },
        "assessment": { "type": "string" },
        "biblical_principle": { "type": "string" }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "description": "Experimental patterns and discoveries",
      "additionalProperties": true
    }
  },
  "definitions": {
    "dayPattern": {
      "type": "object",
      "required": ["iso_day", "session_count", "avg_duration_minutes", "avg_health_score"],
      "properties": {
        "iso_day": { "type": "integer", "minimum": 1, "maximum": 7 },
        "session_count": { "type": "integer", "minimum": 0 },
        "avg_duration_minutes": { "type": "number", "minimum": 0 },
        "avg_health_score": { "type": "number", "minimum": -100, "maximum": 100 },
        "typical_start_time": { "type": "string" },
        "characteristics": {
          "type": "array",
          "items": { "type": "string" }
        },
        "sabbath_note": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
