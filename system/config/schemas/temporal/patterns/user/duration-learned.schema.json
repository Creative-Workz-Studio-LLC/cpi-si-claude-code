{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/user/duration-learned.schema.json",
  "title": "User Duration Learned Patterns Schema",
  "description": "Schema for learned session duration patterns from user session data",
  "type": "object",
  "required": ["metadata", "duration_categories", "typical_duration", "quality_correlation", "capacity", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["user", "pattern_type", "description", "data_period", "last_updated", "version"],
      "properties": {
        "user": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["duration_learned"] },
        "description": { "type": "string" },
        "data_period": {
          "type": "object",
          "required": ["start", "end", "total_sessions_analyzed"],
          "properties": {
            "start": { "type": "string", "format": "date" },
            "end": { "type": "string", "format": "date" },
            "total_sessions_analyzed": { "type": "integer", "minimum": 0 }
          }
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
      }
    },
    "duration_categories": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "brief": { "$ref": "#/definitions/durationCategory" },
        "short": { "$ref": "#/definitions/durationCategory" },
        "medium": { "$ref": "#/definitions/durationCategory" },
        "long": { "$ref": "#/definitions/durationCategory" },
        "extended": { "$ref": "#/definitions/durationCategory" }
      }
    },
    "typical_duration": {
      "type": "object",
      "required": ["mean_minutes", "median_minutes", "mode_category"],
      "properties": {
        "mean_minutes": { "type": "number", "minimum": 0 },
        "median_minutes": { "type": "number", "minimum": 0 },
        "mode_category": { "type": "string" },
        "note": { "type": "string" }
      }
    },
    "quality_correlation": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "optimal_duration_range": {
          "type": "object",
          "properties": {
            "min_minutes": { "type": "number", "minimum": 0 },
            "max_minutes": { "type": "number", "minimum": 0 },
            "avg_quality_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "quality_degradation_point": {
          "type": "object",
          "properties": {
            "minutes": { "type": "number", "minimum": 0 },
            "note": { "type": "string" }
          }
        }
      }
    },
    "capacity": {
      "type": "object",
      "properties": {
        "sustainable_session_length": {
          "type": "object",
          "properties": {
            "minutes": { "type": "number", "minimum": 0 },
            "note": { "type": "string" }
          }
        },
        "maximum_observed": {
          "type": "object",
          "properties": {
            "minutes": { "type": "number", "minimum": 0 },
            "date": { "type": "string" },
            "quality_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "note": { "type": "string" }
          }
        },
        "recommended_planning": {
          "type": "object",
          "properties": {
            "note": { "type": "string" },
            "typical_work_block": { "type": "string" },
            "include_breaks": { "type": "boolean" }
          }
        }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "description": "Experimental patterns and discoveries",
      "additionalProperties": true
    }
  },
  "definitions": {
    "durationCategory": {
      "type": "object",
      "required": ["range_minutes", "session_count", "percentage", "avg_quality_score", "typical_context"],
      "properties": {
        "range_minutes": { "type": "string" },
        "session_count": { "type": "integer", "minimum": 0 },
        "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
        "avg_quality_score": { "type": "number", "minimum": -100, "maximum": 100 },
        "typical_context": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
