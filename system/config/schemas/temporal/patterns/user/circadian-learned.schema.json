{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/user/circadian-learned.schema.json",
  "title": "User Circadian Learned Patterns Schema",
  "description": "Schema for learned circadian rhythm patterns from user session data",
  "type": "object",
  "required": ["metadata", "work_hours", "time_category_distribution", "celestial_alignment", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["user", "pattern_type", "description", "data_period", "last_updated", "version"],
      "properties": {
        "user": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["circadian_learned"] },
        "description": { "type": "string" },
        "data_period": {
          "type": "object",
          "required": ["start", "end", "total_sessions_analyzed"],
          "properties": {
            "start": { "type": "string", "format": "date" },
            "end": { "type": "string", "format": "date" },
            "total_sessions_analyzed": { "type": "integer", "minimum": 0 }
          }
        },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "note": { "type": "string" }
      }
    },
    "work_hours": {
      "type": "object",
      "properties": {
        "primary_window": {
          "type": "object",
          "required": ["description", "start_time", "end_time", "timezone", "time_category", "percentage_of_sessions", "session_count"],
          "properties": {
            "description": { "type": "string" },
            "start_time": { "type": "string", "pattern": "^[0-2][0-9]:[0-5][0-9]$" },
            "end_time": { "type": "string", "pattern": "^[0-2][0-9]:[0-5][0-9]$" },
            "timezone": { "type": "string" },
            "time_category": { "type": "string" },
            "percentage_of_sessions": { "type": "number", "minimum": 0, "maximum": 100 },
            "session_count": { "type": "integer", "minimum": 0 }
          }
        },
        "secondary_window": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "start_time": { "type": "string" },
            "end_time": { "type": "string" },
            "timezone": { "type": "string" },
            "time_category": { "type": "string" },
            "percentage_of_sessions": { "type": "number" },
            "session_count": { "type": "integer" }
          }
        }
      }
    },
    "time_category_distribution": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "early_morning": { "$ref": "#/definitions/timeCategory" },
        "morning": { "$ref": "#/definitions/timeCategory" },
        "afternoon": { "$ref": "#/definitions/timeCategory" },
        "evening": { "$ref": "#/definitions/timeCategory" },
        "night": { "$ref": "#/definitions/timeCategory" }
      }
    },
    "celestial_alignment": {
      "type": "object",
      "properties": {
        "note": { "type": "string" },
        "work_before_sunrise": {
          "type": "object",
          "properties": {
            "percentage_of_sessions": { "type": "number" },
            "avg_quality_score": { "type": "number" }
          }
        },
        "work_during_daylight": {
          "type": "object",
          "properties": {
            "percentage_of_sessions": { "type": "number" },
            "avg_quality_score": { "type": "number" }
          }
        },
        "work_after_sunset": {
          "type": "object",
          "properties": {
            "percentage_of_sessions": { "type": "number" },
            "avg_quality_score": { "type": "number" }
          }
        },
        "alignment_assessment": { "type": "string" }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "description": "Experimental patterns and discoveries",
      "additionalProperties": true
    }
  },
  "definitions": {
    "timeCategory": {
      "type": "object",
      "required": ["range", "session_count", "percentage", "avg_duration_minutes", "avg_quality_score"],
      "properties": {
        "range": { "type": "string" },
        "session_count": { "type": "integer", "minimum": 0 },
        "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
        "avg_duration_minutes": { "type": "number", "minimum": 0 },
        "avg_quality_score": { "type": "number", "minimum": -100, "maximum": 100 }
      }
    }
  },
  "additionalProperties": false
}
