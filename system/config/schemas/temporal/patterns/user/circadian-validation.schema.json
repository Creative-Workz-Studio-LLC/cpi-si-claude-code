{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://creativeworkzstudio.com/schemas/temporal/patterns/user/circadian-validation.schema.json",
  "title": "User Circadian Validation Schema",
  "description": "Schema for validating stated circadian preferences against actual behavior",
  "type": "object",
  "required": ["metadata", "stated_preference", "actual_behavior", "validation_result", "usage", "extensions"],
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["user", "pattern_type", "description", "last_updated", "version"],
      "properties": {
        "user": { "type": "string" },
        "pattern_type": { "type": "string", "enum": ["circadian_validation"] },
        "description": { "type": "string" },
        "last_updated": { "type": "string", "format": "date" },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
      }
    },
    "stated_preference": {
      "type": "object",
      "required": ["source", "preference", "extracted_date"],
      "properties": {
        "source": { "type": "string" },
        "preference": { "type": "string" },
        "extracted_date": { "type": "string", "format": "date" }
      }
    },
    "actual_behavior": {
      "type": "object",
      "required": ["source", "primary_work_window", "data_period"],
      "properties": {
        "source": { "type": "string" },
        "primary_work_window": { "type": "string" },
        "secondary_work_window": { "type": "string" },
        "night_sessions_percentage": { "type": "number" },
        "early_morning_sessions_percentage": { "type": "number" },
        "data_period": { "type": "string" }
      }
    },
    "validation_result": {
      "type": "object",
      "required": ["alignment_status", "confidence"],
      "properties": {
        "alignment_status": { "type": "string" },
        "night_owl_validated": { "type": "boolean" },
        "early_morning_validated": { "type": "boolean" },
        "confidence": { "type": "string", "enum": ["low", "medium", "high"] },
        "note": { "type": "string" }
      }
    },
    "misalignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "stated": { "type": "string" },
          "actual": { "type": "string" },
          "severity": { "type": "string", "enum": ["minor", "moderate", "significant"] },
          "possible_reasons": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "insights": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "recommendations": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "usage": {
      "type": "object",
      "required": ["purpose"],
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
