# =============================================================================
# BODY
# =============================================================================

# Top-most EditorConfig for compiler project
root = true

# -----------------------------------------------------------------------------
# Default Settings - All Files
# -----------------------------------------------------------------------------
# Kingdom Technology standard: Linux-first, UTF-8

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# Go Source Files - Compiler Implementation
# -----------------------------------------------------------------------------
# Go uses tabs by convention (gofmt enforces this)

[*.go]
indent_style = tab
indent_size = 4

# Go test files follow same convention
[*_test.go]
indent_style = tab
indent_size = 4

# Go module files
[go.mod]
indent_style = tab
indent_size = 4

[go.sum]
indent_style = tab
indent_size = 4

[go.work]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# OmniCode Source Files - The Language Being Compiled
# -----------------------------------------------------------------------------
# OmniCode files follow the language specification

[*.omni]
indent_style = space
indent_size = 4
max_line_length = 120

[*.omc]
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Build System Files
# -----------------------------------------------------------------------------
# Makefiles MUST use tabs (Make syntax requirement)

[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

[GNUmakefile]
indent_style = tab
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# -----------------------------------------------------------------------------
# C/C++ Files - Runtime Library
# -----------------------------------------------------------------------------
# If compiler has C/C++ components (runtime, FFI, etc.)

[*.c]
indent_size = 4

[*.h]
indent_size = 4

[*.cpp]
indent_size = 4

[*.hpp]
indent_size = 4

[*.cc]
indent_size = 4

[*.hh]
indent_size = 4

# -----------------------------------------------------------------------------
# Assembly Files - Code Generation Backend
# -----------------------------------------------------------------------------
# Assembly uses tabs traditionally

[*.s]
indent_style = tab
indent_size = 8

[*.S]
indent_style = tab
indent_size = 8

[*.asm]
indent_style = tab
indent_size = 8

# -----------------------------------------------------------------------------
# Configuration Files
# -----------------------------------------------------------------------------

[*.toml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.jsonc]
indent_size = 2

# -----------------------------------------------------------------------------
# Documentation
# -----------------------------------------------------------------------------

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.txt]
indent_size = 2

[*.rst]
indent_size = 2

# -----------------------------------------------------------------------------
# Shell Scripts
# -----------------------------------------------------------------------------

[*.sh]
indent_size = 2

[*.bash]
indent_size = 2

# -----------------------------------------------------------------------------
# Test Fixtures and Examples
# -----------------------------------------------------------------------------
# Test input files should preserve exact formatting

[demos/**]
trim_trailing_whitespace = false

[testdata/**]
trim_trailing_whitespace = false

[fixtures/**]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# Generated Files
# -----------------------------------------------------------------------------
# Generated files shouldn't be edited, but if viewed, use consistent settings

[generated/**]
indent_style = unset
indent_size = unset

