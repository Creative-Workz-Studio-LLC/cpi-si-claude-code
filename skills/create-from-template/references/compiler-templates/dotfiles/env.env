# -----------------------------------------------------------------------------
# Compiler Identity
# -----------------------------------------------------------------------------
# Basic compiler identification settings.

# Compiler name and version (for --version output)
OMNICODE_NAME=OmniCode Compiler
OMNICODE_VERSION=0.1.0

# Environment: development, test, release
OMNICODE_ENV=development

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Settings that affect compilation behavior.

# Optimization level: 0 (none), 1 (basic), 2 (standard), 3 (aggressive)
OMNICODE_OPT_LEVEL=0

# Enable debug symbols in output
OMNICODE_DEBUG_SYMBOLS=true

# Target architecture: x86_64, arm64, wasm
OMNICODE_TARGET_ARCH=x86_64

# Target OS: linux, darwin, windows
OMNICODE_TARGET_OS=linux

# -----------------------------------------------------------------------------
# Output Configuration
# -----------------------------------------------------------------------------
# Where compiler writes output.

# Output directory for compiled artifacts
OMNICODE_OUTPUT_DIR=./build

# Binary output name (when compiling to executable)
OMNICODE_OUTPUT_NAME=a.out

# Intermediate files directory
OMNICODE_TEMP_DIR=./build/temp

# Generated code directory (for codegen phase)
OMNICODE_GENERATED_DIR=./generated

# -----------------------------------------------------------------------------
# Debugging and Development
# -----------------------------------------------------------------------------
# Settings for compiler development and debugging.

# Enable debug output: true/false
OMNICODE_DEBUG=true

# Debug verbosity: 0 (minimal), 1 (standard), 2 (verbose), 3 (trace)
OMNICODE_DEBUG_LEVEL=1

# Trace specific compiler phases (comma-separated)
# Options: lexer, parser, semantic, codegen, all
OMNICODE_TRACE_PHASES=

# Dump AST after parsing: true/false
OMNICODE_DUMP_AST=false

# Dump token stream: true/false
OMNICODE_DUMP_TOKENS=false

# Dump symbol table: true/false
OMNICODE_DUMP_SYMBOLS=false

# Dump IR (intermediate representation): true/false
OMNICODE_DUMP_IR=false

# AST dump format: json, text, graphviz
OMNICODE_AST_FORMAT=json

# Directory for dump files
OMNICODE_DUMP_DIR=./debug-output

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Compiler logging settings.

# Log level: debug, info, warn, error
OMNICODE_LOG_LEVEL=debug

# Log output: stdout, stderr, file
OMNICODE_LOG_OUTPUT=stdout

# Log file path (if LOG_OUTPUT=file)
OMNICODE_LOG_FILE=./logs/compiler.log

# Log format: text, json
OMNICODE_LOG_FORMAT=text

# Include timestamps in logs: true/false
OMNICODE_LOG_TIMESTAMPS=true

# Include source location in logs: true/false
OMNICODE_LOG_SOURCE=true

# -----------------------------------------------------------------------------
# Health Scoring Configuration
# -----------------------------------------------------------------------------
# CPI-SI health scoring settings.

# Enable health scoring: true/false
OMNICODE_HEALTH_ENABLED=true

# Health scoring log level: debug, info, warn, error
OMNICODE_HEALTH_LOG_LEVEL=info

# Health report output: stdout, file, both
OMNICODE_HEALTH_OUTPUT=stdout

# Health report file path
OMNICODE_HEALTH_FILE=./health-report.json

# Detection resolution: 5, 10, 20, 25, 50
OMNICODE_HEALTH_RESOLUTION=20

# Covenant thresholds (override config file)
OMNICODE_CPI_DENIED_THRESHOLD=-50
OMNICODE_CPI_GRANTED_THRESHOLD=50

# -----------------------------------------------------------------------------
# Lexer Configuration
# -----------------------------------------------------------------------------
# Lexer phase settings.

# Maximum token length (prevents runaway strings)
OMNICODE_LEXER_MAX_TOKEN_LENGTH=10000

# Maximum file size to process (bytes)
OMNICODE_LEXER_MAX_FILE_SIZE=10485760

# Tab width for position tracking
OMNICODE_LEXER_TAB_WIDTH=4

# -----------------------------------------------------------------------------
# Parser Configuration
# -----------------------------------------------------------------------------
# Parser phase settings.

# Maximum recursion depth (prevents stack overflow)
OMNICODE_PARSER_MAX_DEPTH=1000

# Error recovery strategy: panic, recover, skip
OMNICODE_PARSER_ERROR_RECOVERY=recover

# Maximum errors before aborting
OMNICODE_PARSER_MAX_ERRORS=10

# -----------------------------------------------------------------------------
# Semantic Analysis Configuration
# -----------------------------------------------------------------------------
# Type checking and semantic analysis settings.

# Strict type checking: true/false
OMNICODE_SEMANTIC_STRICT=true

# Warn on unused variables: true/false
OMNICODE_WARN_UNUSED=true

# Warn on implicit conversions: true/false
OMNICODE_WARN_IMPLICIT=true

# -----------------------------------------------------------------------------
# Code Generation Configuration
# -----------------------------------------------------------------------------
# Codegen phase settings.

# Code generator backend: native, llvm, c
OMNICODE_CODEGEN_BACKEND=native

# Enable inline assembly: true/false
OMNICODE_CODEGEN_INLINE_ASM=true

# Generate position-independent code: true/false
OMNICODE_CODEGEN_PIC=false

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
# Settings for test mode.

# Enable test mode: true/false
OMNICODE_TEST_MODE=false

# Test timeout (seconds)
OMNICODE_TEST_TIMEOUT=30

# Test output directory
OMNICODE_TEST_OUTPUT=./test-output

# Verbose test output: true/false
OMNICODE_TEST_VERBOSE=true

# -----------------------------------------------------------------------------
# Development Paths
# -----------------------------------------------------------------------------
# Paths for development tools and resources.

# Path to standard library sources
OMNICODE_STDLIB_PATH=./stdlib

# Path to runtime library
OMNICODE_RUNTIME_PATH=./runtime

# Additional include paths (colon-separated)
OMNICODE_INCLUDE_PATHS=

# Additional library paths (colon-separated)
OMNICODE_LIB_PATHS=

