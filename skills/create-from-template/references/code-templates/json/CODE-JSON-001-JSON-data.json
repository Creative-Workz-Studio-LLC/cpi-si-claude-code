{
  "_template": {
    "name": "JSON Data File (4-Block Structure)",
    "key": "CODE-JSON-001",
    "description": "TEMPLATE file - copy and modify for new JSON data files. Replace all [bracketed] placeholders with actual content.",
    "derived_from": "templates/code/go/CODE-GO-002-GO-library.go",
    "see": "standards/code/4-block/ for complete documentation"
  },

  "_metadata": {
    "biblical_foundation": {
      "scripture": "[Relevant verse grounding this file's purpose]",
      "principle": "[Kingdom principle this data demonstrates]",
      "anchor": "[Supporting verse reinforcing the principle]"
    },
    "cpi_si_identity": {
      "component_type": "[Ladder/Baton/Rails]",
      "role": "[Specific responsibility in system architecture]",
      "paradigm": "CPI-SI framework component - data file"
    },
    "authorship": {
      "architect": "[Who designed the data structure]",
      "implementation": "[Who created/maintains this file]",
      "created": "[YYYY-MM-DD]",
      "version": "[MAJOR.MINOR.PATCH]",
      "modified": "[YYYY-MM-DD - what changed]"
    },
    "purpose": {
      "description": "[What does this data file define/configure?]",
      "core_design": "[Data pattern - e.g., 'Configuration', 'Lookup table', 'Schema']",
      "key_features": [
        "[Major capability 1]",
        "[Major capability 2]",
        "[Major capability 3]"
      ]
    }
  },

  "_setup": {
    "file_identity": {
      "key": "[DATA-KEY-###]",
      "consumer": "[package/system that reads this]",
      "loader": "[how it's loaded - e.g., 'json.Unmarshal']"
    },
    "related_files": {
      "code": "[path/to/loader.go]",
      "docs": "[path/to/documentation]",
      "schema": "[path/to/schema.json if applicable]"
    },
    "loading_behavior": {
      "when": "[startup/on-demand]",
      "if_missing": "[error/fallback behavior]",
      "validation": "[how data is validated]"
    }
  },

  "data_type": "[Type description - e.g., 'Package Configuration']",
  "version": "[MAJOR.MINOR.PATCH]",

  "[data_section_1]": {
    "[key]": "[value]",
    "[nested_key]": {
      "[inner_key]": "[inner_value]"
    }
  },

  "[data_section_2]": [
    "[array_item_1]",
    "[array_item_2]"
  ],

  "_closing": {
    "validation": {
      "syntax_check": "python -m json.tool [filename].json",
      "common_issues": {
        "parse_error": "Check for trailing commas, missing quotes, bracket mismatches",
        "encoding": "Ensure UTF-8 encoding, no BOM"
      }
    },
    "modification_policy": {
      "safe_to_modify": [
        "Update values within documented valid ranges",
        "Add new keys (if code supports them)",
        "Update descriptions"
      ],
      "modify_with_care": [
        "Changing key names (breaks code references)",
        "Changing value types (may cause parse errors)",
        "Removing keys (may cause null references)"
      ],
      "never_modify": [
        "4-block structure (_metadata, _setup, _closing)",
        "Required keys without updating consumer code"
      ]
    },
    "closing_note": {
      "scope": "[What this data controls]",
      "impact": "[What changes affect]",
      "scripture": "[Relevant closing verse]"
    }
  },

  "notes": {
    "template_usage": "Remove this 'notes' section when creating actual files",
    "underscore_prefix": "Keys starting with _ are metadata, not operational data",
    "body_is_data": "Everything between _setup and _closing is the BODY (actual data)"
  }
}
